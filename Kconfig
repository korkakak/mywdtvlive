			default 4353
		config HTTP_HEADER_KEEP_ORIGINAL_HOSTNAME
			bool "Do not resolve IP address while calling url_init."
			help
				"Do not call gethostbyname to get the IP address. Keep hostname passed to get_hostname function. MediaFly of online services counts on this. Please see src/util/src/httpAPI/url.c for detail."
			default n
		config ACCOUNT_MGR
			bool "Supports account management"
			default y 
			
			menu "Account Manager Options"
				depends on ACCOUNT_MGR
				config ACCOUNT_FACTORY_SETTINGS
					depends on ACCOUNT_MGR
					string "account factory settings"
					default "account_list.xml"
