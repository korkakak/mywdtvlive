
mainmenu "DMAX Configuration"

config	VERSION
	string "version"
	default "0.00.01"	

menu "Preparation"
	

	menu "Product selection"
		choice
			prompt	"Product extension"
			config	PRODUCT_EXT_WDTV_HOUSE
				bool "WDTV HOUSE"
			config	PRODUCT_EXT_WDTV_HUT
				bool "WDTV HUT"
			config	PRODUCT_EXT_WDTV_VILLA
				bool "WD VILLA"
			config	PRODUCT_EXT_WDTV_RV
				bool "WD RV"
			config	PRODUCT_EXT_LMP555
				bool "Lacie LMP555"
			config  PRODUCT_EXT_AV_LS700L
				bool "IODATA AV_LS700L"
			config  PRODUCT_EXT_IMEDIA_HD100
				bool "BEWAN iMedia HD100"
			config  PRODUCT_EXT_FUNTWIST
				bool "FUNTWIST"
			config  PRODUCT_EXT_ALPHA
				bool "Alpha customized product (For developing whatever you want) "
			config  PRODUCT_EXT_EM7075
				bool "Eminent EM7075"
		endchoice

		config  RV_HOME
			bool "RV HOME"
			depends on PRODUCT_EXT_WDTV_RV
			default y
			help
			"turn on this option to use rv home page at startup"
		config  PRODUCT_EXT_WDTV_VILLA_BUNGALOW
			bool "WD VILLA BUNGALOW"
			depends on PRODUCT_EXT_WDTV_VILLA
			default n
			help
			"turn on this option for BUNGALOW firmware"
		config	PRODUCT_EXT_UNO
			bool "Google UNO"
			depends on PRODUCT_EXT_WDTV_VILLA_BUNGALOW
			default n
			help
				"turn on this option for UNO firmware (depends on WDTV_VILLA & WDTV_BUNGALOW)

			choice
				prompt	"UNO Phase selection"
				depends on PRODUCT_EXT_UNO
				config	UNO_PHASE_I
					bool "Google UNO Phase I"
				config	UNO_PHASE_II
					bool "Google UNO Phase II"
			endchoice
			
			config UNO_PHASE_II_FEATURES
				depends on PRODUCT_EXT_UNO
				bool "Some features for phase II"
				default y if UNO_PHASE_II
				default n
		
			config UNO_USE_FLASH_FRAMEWORK
				depends on PRODUCT_EXT_UNO
				bool "Use only flash based apps without engine UI"
				default n 

		config PRODUCT_SN
			string
                        default "WDTV_SN" if PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA
                        default "HDD_SN" if PRODUCT_EXT_WDTV_RV
			default "PRODUCT_SN"
		
		choice 
			prompt "UI logic"
			config UI_LOGIC_TVDOCK
				bool "TVDOCK"
				depends on (PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_ALPHA || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_IMEDIA_HD100 || PRODUCT_EXT_FUNTWIST || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV)
			config UI_LOGIC_LMP555
				bool "LMP555"
				depends on (PRODUCT_EXT_LMP555)
			config UI_LOGIC_VILLA
				bool "VILLA"
				depends on PRODUCT_EXT_WDTV_VILLA
			config UI_LOGIC_RV
				bool "RV"
				depends on PRODUCT_EXT_WDTV_RV
		endchoice
		choice
			prompt	"Basic Pages Selection"
			default BASIC_PAGES_WD_RV if PRODUCT_EXT_WDTV_RV
			default BASIC_PAGES_WD if PRODUCT_EXT_WDTV_VILLA 
			default BASIC_PAGE_GOOGLE_UNO if PRODUCT_EXT_UNO
			default BASIC_PAGES_LACIE_CLASSIC if PRODUCT_EXT_LMP555 
			config	BASIC_PAGES_GENERIC
				bool "Pages"
				depends on !PRODUCT_EXT_WDTV_RV && !PRODUCT_EXT_WDTV_VILLA && !PRODUCT_EXT_LMP555
				help 
				"original Pages Folder, for general used"
			config	BASIC_PAGES_WD
				bool "WD_Pages"
				depends on (PRODUCT_EXT_WDTV_VILLA && !PRODUCT_EXT_UNO)
				help 
				"copy from pages. For WD, we'll do special UI/Flow. So we duplicate pages so that WD can have their own basic_class, browse3_class, playing pages ...."
			config	BASIC_PAGES_WD_RV
				bool "RV_Pages"
				depends on PRODUCT_EXT_WDTV_RV
				help 
				"copy from pages. For WD, we'll do special UI/Flow. So we duplicate pages so that WD can have their own basic_class, browse3_class, playing pages ...."
			config BASIC_PAGE_GOOGLE_UNO
				bool "UNO_Pages"
				depends on PRODUCT_EXT_UNO
				help
				"copy from pages. For WD, we'll do special UI/Flow. So we duplicate pages so that WD can have their own basic_class, browse3_class, playing pages ...."
			config	BASIC_PAGES_LACIE_CLASSIC
				bool "Lacie_pages"
				depends on PRODUCT_EXT_LMP555
				help 
				"We merge pages/LMP555_pages/TVDOCK_pages to this directory to avoid confused codebase for Ariance"
		endchoice
		config UI_LOGIC
			string
			default "TVDOCK_pages" if UI_LOGIC_TVDOCK 
			default "LMP555_pages" if UI_LOGIC_LMP555
			default "VILLA_pages" if (UI_LOGIC_VILLA && !PRODUCT_EXT_UNO)
			default "RV_pages" if UI_LOGIC_RV
			default "UNO_pages" if (UI_LOGIC_VILLA && PRODUCT_EXT_UNO)
		
		choice
			prompt	"House UI OEM"
				depends on PRODUCT_EXT_WDTV_HOUSE
			config OEM_HOUSE_WD
				bool "House with WD UI"
			config OEM_HOUSE_ALPHA
				bool "House with alpha generic UI"
		endchoice

		choice
			prompt	"Penthouse Apartment UI OEM"
				depends on PRODUCT_EXT_WDTV_HUT
			config OEM_HUT_WD
				bool "PA with WD UI"
			config OEM_HUT_ALPHA
				bool "PA with alpha generic UI"
		endchoice

		choice
			prompt	"LMP555 UI OEM"
				depends on PRODUCT_EXT_LMP555
			config OEM_LMP555_LACIE
				bool "LMP555 with Lacie UI"
			config OEM_LMP555_ALPHA
				bool "LMP555 with alpha UI"
		endchoice

		choice
			prompt  "AV_LS700L UI OEM"
                               depends on PRODUCT_EXT_AV_LS700L
			config OEM_AV_LS700L
                               bool "AV_LS700L UI"
		endchoice

		choice
			prompt  "IMEDIA_HD100 UI OEM"
                               depends on PRODUCT_EXT_IMEDIA_HD100
			config OEM_IMEDIA_HD100
                               bool "IMEDIA_HD100 UI"
		endchoice

		choice
			prompt  "FUNTWIST UI OEM"
                               depends on PRODUCT_EXT_FUNTWIST
			config OEM_FUNTWIST
                               bool "FUNTWIST UI"
		endchoice

		choice
			prompt  "EM7075 UI OEM"
                               depends on PRODUCT_EXT_EM7075
			config OEM_EM7075
                               bool "EM7075 UI"
		endchoice

		choice
			prompt "Resource"
			config RESOURCE_TVDOCK
				bool "TVDOCK"
				depends on OEM_HOUSE_WD || OEM_HUT_WD
			config RESOURCE_VILLA
				bool "VILLA UI from WD"
				depends on PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			config RESOURCE_AV_LS700L
				bool "AV_LS700L"
				depends on PRODUCT_EXT_AV_LS700L
			config RESOURCE_AV_LS700L_BLUE
				bool "AV_LS700L_BLUE"
				depends on PRODUCT_EXT_AV_LS700L
			config RESOURCE_IMEDIA_HD100
				bool "IMEDIA_HD100"
				depends on PRODUCT_EXT_IMEDIA_HD100
			config RESOURCE_FUNTWIST
				bool "FUNTWIST"
				depends on PRODUCT_EXT_FUNTWIST
			config RESOURCE_TVDOCK_ALPHA
				bool "TVDOCK Alpha UI"
				depends on PRODUCT_EXT_ALPHA || OEM_LMP555_ALPHA || OEM_HOUSE_ALPHA || OEM_HUT_ALPHA
			config RESOURCE_LMP555
				bool "LMP 555"
				depends on OEM_LMP555_LACIE
			config RESOURCE_EM7075
				bool "EM7075"
				depends on PRODUCT_EXT_EM7075
		endchoice
		config RESOURCE
			string
			default "TVDOCK" if RESOURCE_TVDOCK
			default "TVDOCK_ALPHA" if RESOURCE_TVDOCK_ALPHA
			default "LMP555" if RESOURCE_LMP555
			default "RES_VILLA" if (PRODUCT_EXT_WDTV_VILLA && !PRODUCT_EXT_UNO)
			default "RES_AV_LS700L" if RESOURCE_AV_LS700L 
			default "RES_AV_LS700L_BLUE" if RESOURCE_AV_LS700L_BLUE
			default "RES_IMEDIA_HD100" if RESOURCE_IMEDIA_HD100
			default "RES_FUNTWIST" if RESOURCE_FUNTWIST
			default "RES_EM7075" if RESOURCE_EM7075
			default "RES_RV" if PRODUCT_EXT_WDTV_RV
			default "RES_UNO" if (PRODUCT_EXT_WDTV_VILLA && PRODUCT_EXT_UNO)

		config SUPPORT_EXTRA_RESOURCE
			bool "EXTRA option"
			depends on 0
			help
			If you turn on this option, system will copy [CONF_RESOURCE] first then copy [CONF_EXTRA_RESOURCE] thereafter for installing step.

		config EXTRA_RESOURCE
			string
			depends on SUPPORT_EXTRA_RESOURCE
			default "RES_RV" if PRODUCT_EXT_WDTV_RV
			default "RES_UNO" if PRODUCT_EXT_UNO

		choice
			prompt "Model (World wide, US, EU, ....)"
			config MODEL_WW
				bool "World wide"
			config MODEL_US
				bool "United states only"
			config MODEL_EU
				bool "Europe"
		endchoice
		config MODEL
			string
			default "ww" if MODEL_WW
			default "us" if MODEL_US
			default "eu" if MODEL_EU

		config TVDOCK
			bool "TVDOCK (Should be removed)"
			default y
		config PRODUCT
			string "Product define (Should be removed)"
			default "TVDOCK"
		config CONFIG_HEADER_TYPE
			string "config file header type"
			default "A"
			help
				config_tool use this option to identify config file
		config CONFIG_HEADER_VERSION
			string "config file header version"
			default "1"
			help
				config_tool use this option to identify config file
		config BUILD_GPL_FIRMWARE
			bool "config build GPL firmware"
			default n
			help
				This config will disable online services and unnecessary third party library to build GPL firmware
	endmenu

	menu "Platform selection"
		choice
			prompt	"Platform"
			config	PLATFORM_SMP8634
				bool "Sigma Designs SMP8634"
				depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_ALPHA 
			config	PLATFORM_SMP8654
				bool "Sigma Designs SMP8654"
				depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_ALPHA || PRODUCT_EXT_LMP555 || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_IMEDIA_HD100 || PRODUCT_EXT_FUNTWIST || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			config	PLATFORM_SMP8670
				bool "Sigma Designs SMP8670"
				depends on PRODUCT_EXT_ALPHA || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_LMP555 || PRODUCT_EXT_WDTV_RV
			config	PLATFORM_X86
				bool "x86"
		endchoice
		choice
			prompt	"Board selection"
			config	PLATFORM_SMP8634_WISTRON_BOARD
				bool "SMP8634 by Wistron"
				depends on PLATFORM_SMP8634
			config	PLATFORM_SMP8634_ALPHA
				bool "SMP8634 by Alpha"
				depends on PLATFORM_SMP8634
				help
					RAM(MB) : Bank0 128, Bank1 64
						RUA RAM : Bank 1
						Kernel RAM : Bank 0
			config	PLATFORM_SMP8654_WISTRON_VILLA_BOARD_D2
				bool "Villa SMP8654 by Wistron + 512 MB RAM + 256 MB Flash (Board id: D2)"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 256, Bank1 256
						RUA RAM : Bank 0
						Kernel RAM : Bank 1
					Flash : 256 MB
			config	PLATFORM_SMP8654_WISTRON_VILLA_BOARD
				bool "Villa SMP8654 by Wistron + 512 MB RAM + 128 MB Flash (Board id: D1)"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 256, Bank1 256
						RUA RAM : Bank 0
						Kernel RAM : Bank 1
					Flash : 128 MB
			config	PLATFORM_SMP8654_WISTRON_BOARD
				bool "SMP8654 by Wistron"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 128, Bank1 128
						RUA RAM : Bank 0
						Kernel RAM : Bank 1
			config	PLATFORM_SMP8654_WISTRON_PENTHOUSE_512_BOARD
				bool "Penthouse_512 by Wistron"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 256, Bank1 256
						RUA RAM : Bank 0
						Kernel RAM : Bank 1
			config	PLATFORM_SMP8652_GOOGLE_UNO_BOARD
				bool "SMP8652 Google UNO by Alpha"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 256, Bank1 0
					Flash : 256 MB
			config	PLATFORM_SMP8670_GOOGLE_UNO_BOARD
				bool "SMP8670 Google UNO by Alpha"
				depends on PLATFORM_SMP8670
				help
					RAM(MB) : Bank0 512 MB (128x16x2)
					Flash : 512 MB (4Gb)
			config	PLATFORM_SMP8654_ALPHA_LMP555_BOARD
				bool "SMP8654 Lacie LMP555 by Alpha"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 256, Bank1 0
			config	PLATFORM_SMP8654_ALPHA_LMP555_A2C_BOARD
				bool "SMP8654 Lacie LMP555 A2c by Alpha"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 256, Bank1 0
                                        internal sata driver zboot
			config	PLATFORM_SMP8654_ALPHA_AV_LS700L_BOARD
				bool "SMP8654 by Alpha (AV_LS700L)"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 512, Bank1 128
					USB can not support 2.5" HDD
			config	PLATFORM_SMP8654_ALPHA_IMEDIA_HD100_BOARD
				bool "SMP8654 by Alpha (IMEDAI_HD100)"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 128, Bank1 128
				        can not support 2.5" HDD
			config	PLATFORM_SMP8654_ALPHA_8AV500LE_BOARD
				bool "SMP8654AD by Alpha + 512 MB RAM + 256 MB Flash"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 256, Bank1 256
						RUA RAM : Bank 0
						Kernel RAM : Bank 1
					Flash : 256 MB
			config	PLATFORM_SMP8654_ALPHA_RV_BOARD
				bool "RV ALPHA BOARD SMP8654AD + 512 MB RAM + 256 MB Flash"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 256, Bank1 256
						RUA RAM : Bank 0
						Kernel RAM : Bank 1
					Flash : 256 MB
			config	PLATFORM_SMP8654_ALPHA_RV_BOARD_256
				bool "RV ALPHA BOARD SMP8654AD + 256 MB RAM + 256 MB Flash"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 256, Bank1 0
						RUA RAM : Bank 0
						Kernel RAM : Bank 1
					Flash : 256 MB
			config	PLATFORM_SMP8670_ALPHA_PALACE_BOARD
				bool "ALPHA PALACE BOARD SMP8670 + 512 MB RAM + 512 MB Flash"
				depends on PLATFORM_SMP8670
				help
					RAM(MB) : Bank0 512
						RUA RAM : Bank 0
						Kernel RAM : Bank 0
					Flash : 512 MB
			config	PLATFORM_SMP8654_ALPHA_FUNTWIST_BOARD
				bool "SMP8654 by Alpha (FUNTWIST)"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 128, Bank1 128
				        can not support 2.5" HDD
			config	PLATFORM_SMP8654_ALPHA_EM7075_BOARD
				bool "SMP8654 by Alpha (EM7075)"
				depends on PLATFORM_SMP8654
				help
					RAM(MB) : Bank0 128, Bank1 128
				        can not support 2.5" HDD
			config	WILLIAM_LAPTOP	
				bool "William's laptop"
				depends on PLATFORM_X86
			config	PLATFORM_PC
				bool "None"
				depends on PLATFORM_X86
		endchoice
		config PLATFORM_SMP8654_WISTRON_BOARD_FIX_REBOOT
			bool "Patch fix for reboot"
			default y
			depends on PLATFORM_SMP8654_WISTRON_BOARD || PLATFORM_SMP8654_WISTRON_VILLA_BOARD || PLATFORM_SMP8654_WISTRON_PENTHOUSE_512_BOARD
			help
				Workaround for old wistron boards which doesn't have watchdog so that we have to reboot through GPIO

		menu "Common compile options"
			config COMPILE_WITH_GFLAG
				string "Compile with debug information (-g or -ggdb)"
				default "-ggdb" if  PLATFORM_X86
				default ""      if !PLATFORM_X86
			config COMPILE_WITH_OPTIMIZE
				string "Optimize flag (-O, ....)"
				default ""      if  PLATFORM_X86
				default "-O3"    if !PLATFORM_X86
		endmenu
		
		menu "SMP8634 compile options"
			depends on PLATFORM_SMP8634
			choice 
				prompt "SDK"
				config PLATFORM_SMP8634_SDK_2_8_3_0
					bool "2.8.3.0"
				config PLATFORM_SMP8634_SDK_2_8_4_1
					bool "2.8.4.1"
			endchoice
			choice
				prompt "toolchain"
				config PLATFORM_SMP8634_TOOLCHAIN_2_8_2_0
					bool "2.8.2.0"
			endchoice
		endmenu

		menu "SMP8654/SMP8670 compile options"
			depends on PLATFORM_SMP8654 || PLATFORM_SMP8670 
			choice 
				prompt "SDK"
				config PLATFORM_SMP8654_SDK_3_5_0
					bool "3.5.0"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_6_0_rc11
					bool "3.6.0_rc11"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_6_0
					bool "3.6.0"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_6_1_rc2
					bool "3.6.1_rc2"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_7_0
					bool "3.7.0"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_8_0
					bool "3.8.0"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_8_1
					bool "3.8.1"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_8_2
					bool "3.8.2"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_8_3
					bool "3.8.3"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_8_4
					bool "3.8.4"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_8_5
					bool "3.8.5"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_8_5_WD0
					bool "3.8.5_wd0"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_8_7
					bool "3.8.7"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_8_8
					bool "3.8.8"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8670_SDK_3_8_8
					bool "3.8.8"
					depends on PLATFORM_SMP8670
			endchoice
			choice
				depends on PLATFORM_SMP8654_SDK_3_8_8 || PLATFORM_SMP8670_SDK_3_8_8
				prompt	"SDK Sub Version"
				config	PLATFORM_SMP8654_SDK_SUBVERSION_rc_4
					bool	"rc_4"
				config	PLATFORM_SMP8654_SDK_SUBVERSION_rc_6
					bool	"rc_6"
			endchoice
			config SUPPORT_DCCHD
				bool "Using DCCHD"
				default y if PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_WDTV_RV
				depends on PLATFORM_SMP8654_SDK_3_8_0 || PLATFORM_SMP8654_SDK_3_8_1 || PLATFORM_SMP8654_SDK_3_8_2 || PLATFORM_SMP8654_SDK_3_8_3 || PLATFORM_SMP8654_SDK_3_8_4 || PLATFORM_SMP8654_SDK_3_8_5 || PLATFORM_SMP8654_SDK_3_8_5_WD0 || PLATFORM_SMP8654_SDK_3_8_7 || PLATFORM_SMP8654_SDK_3_8_8 || PLATFORM_SMP8670_SDK_3_8_8
				help
					This feature will compile DCCHD, you can use it to play DVD or UI. 
			config USING_DCCHD_NEW_MMAP
				bool 
				depends on SUPPORT_DCCHD
				default y if 3_8_0_NEW_MMAP
			config 3_8_0_NEW_MMAP_DRAM0_70MB
				bool "increase DirectFB DRAM0 size to 70MB "
				depends on 3_8_0_NEW_MMAP
				default n
				help
					the default DRAM0 size is 40MB, but it's not enough for netflix.
			config SUPPORT_DCCHD_DVD_BD_NAVIGATION
				bool "Using DCCHD to do DVD/BD navigation"
				default y if PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_WDTV_RV
				depends on SUPPORT_DCCHD
				help
					This feature will enable full DVD and AVCHD navigation. The dmaosd will call DCCHD to play DVD or AVCHD. 
			choice
				prompt "DCCHD version"
				depends on SUPPORT_DCCHD_DVD_BD_NAVIGATION
				config 3_8_0_AQUA
					bool "3_8_0_aqua" 
					depends on PLATFORM_SMP8654_SDK_3_8_0
				config 3_8_1_RC1_AQUA
					bool "3_8_1_rc1_aqua" 
					depends on PLATFORM_SMP8654_SDK_3_8_1
				config 3_8_2_RC1_AQUA
					bool "3_8_2_rc1_aqua" 
					depends on PLATFORM_SMP8654_SDK_3_8_2
				config 3_8_2_AQUA
					bool "3_8_2_aqua" 
					depends on PLATFORM_SMP8654_SDK_3_8_2
				config 3_8_3_RC1_AQUA
					bool "3_8_3_rc1_aqua" 
					depends on PLATFORM_SMP8654_SDK_3_8_3
				config 3_8_3_AQUA
					bool "3_8_3_aqua" 
					depends on PLATFORM_SMP8654_SDK_3_8_3
				config 3_8_5_RC2_AQUA
					bool "3_8_5_rc2_aqua" 
					depends on PLATFORM_SMP8654_SDK_3_8_5 || PLATFORM_SMP8654_SDK_3_8_5_WD0
				config 3_8_0_NEW_MMAP
					bool "3_8_0_new_mmap" 
					depends on PLATFORM_SMP8654_SDK_3_8_5_WD0
				config 3_8_7_AQUA
					bool "3_8_7_aqua"
					depends on PLATFORM_SMP8654_SDK_3_8_7
				config 3_8_8_AQUA
					bool "3_8_8_aqua" 
					depends on PLATFORM_SMP8654_SDK_3_8_8 || PLATFORM_SMP8670_SDK_3_8_8
				config 3_8_8_rc_6_AQUA
					bool "3_8_8_rc_6_aqua" 
					depends on PLATFORM_SMP8654_SDK_3_8_8 || PLATFORM_SMP8670_SDK_3_8_8
			endchoice
			config DCCHD_VERSION
				string
				depends on SUPPORT_DCCHD
				default "SMP8652_3_8_0_aqua.mips" if 3_8_0_AQUA
				default "SMP8652_3_8_1_rc_1_aqua.mips" if 3_8_1_RC1_AQUA
				default "SMP8652_3_8_2_rc_1_aqua.mips" if 3_8_2_RC1_AQUA
				default "SMP8654_3_8_2_aqua.mips" if 3_8_2_AQUA
				default "SMP8654_3_8_3_rc_1_aqua.mips" if 3_8_3_RC1_AQUA
				default "SMP8652_3_8_3_aqua.mips" if 3_8_3_AQUA
				default "SMP8652_3_8_5_rc_2_aqua.mips" if 3_8_5_RC2_AQUA
				default "SMP865x_dcchd_3_8_0_new_mmap_sandbox_SNAPSHOT_2010-11-17_19h38m30Z_aqua.mips" if 3_8_0_NEW_MMAP
				default "SMP8652_3_8_7_aqua.mips" if 3_8_7_AQUA
				default "SMP8652_3_8_8_rc_4_aqua.mips" if 3_8_8_AQUA
				default "SMP8654_3_8_8_rc_6_aqua.mips" if 3_8_8_rc_6_AQUA
			choice
				prompt "DCCHD HDMI chip select"
				depends on SUPPORT_DCCHD && PLATFORM_SMP8652_GOOGLE_UNO_BOARD 
				config SLI13_HDMI_CHIP
					bool "sli13" 
				config SII9030_HDMI_CHIP
					bool "siI9030" 
				config SII9034_HDMI_CHIP
					bool "siI9034" 
				config SII9134_HDMI_CHIP
					bool "siI9134" 
				config SII9002_HDMI_CHIP
					bool "siI9002"
				help
					SMP8652 need external HDMI phy.
			endchoice
			config DCCHD_MMAP_CONFIG_FILE
				string
				default "dcchd_config_3_8_0.h" if 3_8_0_AQUA || 3_8_1_RC1_AQUA || 3_8_2_RC1_AQUA
			config DIRECTFBRC_BUILDER
				bool "create directfbrc by securesoho config"
				depends on SUPPORT_DCCHD
				default y
				help
					Using securesoho's config to create  directfbrc file for DCCHD.
			config USE_DIRECTFB_PORTING_SOURCECODE
				bool "Use DirectFB porting source code"
				depends on SUPPORT_DCCHD && (3_8_2_AQUA || 3_8_3_RC1_AQUA || 3_8_3_AQUA || 3_8_5_RC2_AQUA || 3_8_0_NEW_MMAP || 3_8_7_AQUA || 3_8_8_AQUA || 3_8_8_rc_6_AQUA)
				default n
			config DIRECTFB_PORTING_VERSION
				depends on USE_DIRECTFB_PORTING_SOURCECODE
				string 
				default "SMP8654_3_8_2_porting.mips" if 3_8_2_AQUA
				default "SMP8654_3_8_3_rc_1_porting.mips" if 3_8_3_RC1_AQUA
				default "SMP8654_3_8_3_porting.mips" if 3_8_3_AQUA
				default "SMP8654_3_8_5_rc_2_porting.mips" if 3_8_5_RC2_AQUA
				default "SMP865x_dcchd_3_8_0_new_mmap_sandbox_SNAPSHOT_2010-11-17_19h38m30Z_porting.mips" if 3_8_0_NEW_MMAP
				default "SMP8652_3_8_7_porting.mips" if 3_8_7_AQUA
				default "SMP8654_3_8_8_rc_4_porting.mips" if 3_8_8_AQUA
				default "SMP8654_3_8_8_rc_6_porting.mips" if 3_8_8_rc_6_AQUA
			config MMAP_DOUBLE_TO_SINGLE
				bool "MMAP_DOUBLE_TO_SINGLE"
				depends on 3_8_8_rc_6_AQUA
				default y
				help
					the default setting is DRAM1(DCCHD), we need to change to DRAM0
					SMP8654 DRAM1(linux kernel) / DRAM0 (for rua memory, DCCHD need more memory space)
			config DCCHD_SUPPORT_VIDEO_OUTPUT_ON_OFF
				bool "add patch to turn on/off video output"
				depends on 3_8_5_RC2_AQUA || 3_8_7_AQUA
				default y
				help
					ITR24384: HDMI No A/V signal with turning on TV after turning on device.
					Fix turning on HDMI fail.
			config DIRECTFB_OVERWRITE_SIMGA_PNG_PATCH
				bool "Overwrite sigma png patch"
				depends on USE_DIRECTFB_PORTING_SOURCECODE && (3_8_3_AQUA || 3_8_5_RC2_AQUA || 3_8_0_NEW_MMAP || 3_8_7_AQUA || 3_8_8_AQUA || 3_8_8_rc_6_AQUA)
				default y
				help
					Use original png provider code to overwrite sigma patch because it will crash randomly.
			config DIRECTFB_SKIP_DFB_SIGNAL_HANDLER
				bool "prohibit DCCHD to catch signal SEGV and BUS "
				depends on USE_DIRECTFB_PORTING_SOURCECODE && (3_8_3_AQUA || 3_8_5_RC2_AQUA || 3_8_0_NEW_MMAP || 3_8_7_AQUA || 3_8_8_AQUA || 3_8_8_rc_6_AQUA)
				default n
				help
					the signal should handle by dmaosd, not dcchd.
					we should take it back.	
			config DIRECTFB_HDMI_FIX_COLOR_DEPTH_SWITCHING
				bool "HDMI Fix 12bit color depth switching patch"
				depends on USE_DIRECTFB_PORTING_SOURCECODE && 3_8_3_AQUA
				default y
				help
					We have to hotplug HDMI cable to make color depth ative.
					Root cause is DFB didn't call hdmi_video_conversion_colordepth().
					This patch is to fix DFB didn't update hdmi_video_conversion_colordepth(). 
			config DCCHD_FIX_AVCHD_PLAY_FAIL_BUT_NO_RETURN
				bool "Fix avchd play fail, but dcchd didn't return error"
				depends on 3_8_5_RC2_AQUA || 3_8_0_NEW_MMAP || 3_8_7_AQUA || 3_8_8_AQUA || 3_8_8_rc_6_AQUA
				default y
				help
					in the log file I see an infinite loop, where MovieManager tries to play playlist#0.

					bdrom spec specifies, if the MovieManager tries to play an invalid playlist
					than go to next command. but in this case, the next command is play playlist#0.
					So lastCmd is not updated with error flag. 
					So when no playlist files in PLAYLIST directory, the MediaDetection() should
					not detect as BDROM or AVCHD.


			config DCCHD_FIX_DVD_PALY_FAIL_AND_SYSTEM_BLOCK
				bool "Fix dvd playing will block system (Class CPlaybackControl need initial variable)"
				depends on 3_8_5_RC2_AQUA || 3_8_0_NEW_MMAP || 3_8_7_AQUA || 3_8_8_AQUA || 3_8_8_rc_6_AQUA
				default y
				help
					m_statusAlreadyLocked be changed as invalid value because Class CPlaybackControl didn't assign init value for it.
					So we have to correct it.
			config DCCHD_FIX_HDMI_NOT_SYNC
				bool "Fix HDMI no output after removed power cable over 5 minutes(ITR 24985)"
				depends on USE_DIRECTFB_PORTING_SOURCECODE && (3_8_5_RC2_AQUA || 3_8_0_NEW_MMAP || 3_8_7_AQUA)
				default y
				help
					ITR24985: [HDMI] DDC fail if user boot up Villa after remove power cable over 5 minutes.
					Root cause is CPU in low temperature will cause HDMI sync fail.
			config DCCHD_FIX_DVD_PCR_FAIL
				bool "Fix DVD PCR error cause dvd play fail"
				depends on USE_DIRECTFB_PORTING_SOURCECODE && (3_8_5_RC2_AQUA || 3_8_0_NEW_MMAP || 3_8_7_AQUA || 3_8_8_AQUA || 3_8_8_rc_6_AQUA)
				default y
				help
					Fix DVD PCR error cause dvd play fail.
			config DIRECTFB_HDMI_FIX_1080P24_SWITCHING
				bool "HDMI Fix fail to switch from 1080p24 to Auto"
				depends on USE_DIRECTFB_PORTING_SOURCECODE && (3_8_3_AQUA || 3_8_5_RC2_AQUA || 3_8_0_NEW_MMAP || 3_8_7_AQUA || 3_8_8_AQUA || 3_8_8_rc_6_AQUA)
				default y
				help
					Fix can't change resolution from Auto to 1080p24.
			config DIRECTFB_HDMI_FIX
				bool "HDMI Fix patch"
				depends on USE_DIRECTFB_PORTING_SOURCECODE && 3_8_2_AQUA
				default n
				help
					The DFB HDMI thread fails if you connect HDMI to TV and change TV sources. The patch is from Yanquan of Sigma. We are runing Netflix project. 
			config DIRECTFB_FIX_COLOR_SPACE
				bool "fix dcchd can't set color space"
				depends on USE_DIRECTFB_PORTING_SOURCECODE
				default n
				help
					DCCHD doesn't use the color space that we setup.
					It use preferences color space.
					This patch will skip preferences color space if we had selected color space.
			config DIRECTFB_FIX_CRASH_IN_INVALID_ISO
				bool "fix dcchd crash in reading invalid iso file"
				depends on USE_DIRECTFB_PORTING_SOURCECODE
				default y
				help
					DCCHD crash if the iso is incorrectly DVD/AVCHD rip file.
					Skip this iso if it's incorrectly rip file.
			config DCCHD_FIX_HDMI_SPD_TO_WDTV
				bool "fix HDMI SPD name to WDTV"
				depends on USE_DIRECTFB_PORTING_SOURCECODE && (PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV)
				default y
				help
					fix ITR No.: 18893HDMI: During HDMI handshaking, Bungalow is recognized by TV as "Bluray SMP_8654"
					change the SPD to "WDC WDTV STB"	
			config DCCHD_FIX_USB_HOTPLUG_CRASH
				bool "fix dcchd dvd navi. crash if the current dvd file be removed"
				depends on 3_8_3_RC1_AQUA || 3_8_3_AQUA
				default y
				help
					fix system reboot if unplug USB disk during dvd playback.
					sigma fix this, but we have to replace librmdvdfs.so.
			choice
				prompt "select original patch for your kernel version"
				config PLATFORM_SMP8654_SDK_3_7_0_ORIGINAL_KERNEL_PATCH
					bool "using 3_7_0_KERNEL"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_3_8_2_ORIGINAL_KERNEL_PATCH
					bool "using 3_8_2_KERNEL"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8654_SDK_2_6_29_17_ORIGINAL_KERNEL_PATCH
					bool "using 2.6.29-17_KERNEL"
					depends on PLATFORM_SMP8654
				config PLATFORM_SMP8670_SDK_2_6_22_19_40_ORIGINAL_KERNEL_PATCH
					bool "using 2.6.22.19-40_KERNEL for SMP8670"
					depends on PLATFORM_SMP8670
				help
					The original LINUX Kernel needs sigma's patch for SMP865x. 
					You have to select one for your kernel.
			endchoice
		
			config SUPPORT_DRIVE_LARGER_THAN_2T
				bool 
				depends on PLATFORM_SMP8654_SDK_3_7_0_ORIGINAL_KERNEL_PATCH
				default y if PLATFORM_SMP8654_SDK_3_7_0_ORIGINAL_KERNEL_PATCH

			config PLATFORM_SMP8654_SDK_3_7_1_RC3_BASE_ON_3_7_0
				bool "3.7.1_rc3 SDK base on 3.7.0"
				depends on PLATFORM_SMP8654_SDK_3_7_0
				default n
				help
					we just use 3.7.1_rc3 mrua and mruafw SDK. 
					the player code is the same the 3.7.0

			choice
				prompt "toolchain"
				config PLATFORM_SMP8654_TOOLCHAIN_3_4_0
					bool "3.4.0"
				config PLATFORM_SMP8654_TOOLCHAIN_3_6_0
					bool "3.6.0"
				config PLATFORM_SMP8654_TOOLCHAIN_GNU_4_3_2
					bool "mips4.3.2"
			endchoice
			
			choice
				prompt "Choose ezboot version" 
				depends on PLATFORM_SMP8654 || PLATFORM_SMP8670
				config SIGMA_EZBOOT_0X82_NAND_FLASH_DRIVER
					bool "Use ezboot_0x82 to generate bootloader"
					depends on PLATFORM_SMP8654
				config SIGMA_EZBOOT_0X98_NAND_FLASH_DRIVER
					bool "Use ezboot_0x98 to generate bootloader for New NAND flash driver"
					depends on PLATFORM_SMP8654
				config SIGMA_EZBOOT_0Xb5_NAND_FLASH_DRIVER
					bool "Use ezboot_0xb5 to generate bootloader"
					depends on PLATFORM_SMP8670
			endchoice

			config SIGMA_EZBOOT_0X98_OPTIMIZED_IOS_ALLOC
				bool "sigma zboot optimized the IOS allocate address"
				default n
				depends on SIGMA_EZBOOT_0X98_NAND_FLASH_DRIVER
				help
					optimized the IOS allocate address.

			choice
				prompt "Choose yamon version"
				depends on PLATFORM_SMP8654 || PLATFORM_SMP8670
				config SIGMA_YAMON_R2_13_17_NAND_FLASH_DRIVER
					bool "Use yamon_R2.13-17"
					depends on PLATFORM_SMP8654
				config SIGMA_YAMON_R2_13_24_NAND_FLASH_DRIVER
