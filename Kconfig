			default "screenshot_00.jpg"
			depends on THEME_ENABLED

		config DEFAULT_THEME
			string "default theme"
			default "/osd"
			depends on THEME_ENABLED
			
		config DESKTOP_ENABLED
			bool "desktop setting support"
			default n
			help
				This feature permit user to change the background image.
				User can manage all background images which storage on USB or SATA drive,
				such as preview, set, delete etc., and user can also restore to default one.		
		choice 
			prompt "storage to save for Theme/Desktop "
			depends on DESKTOP_ENABLED
			default THEME_DESKTOP_STORE_ON_SATA if MOUNT_LOCAL_SATA_DRIVE
