			bool "Ralink RT2880 mini pci support"
			default y
			depends on WIRELESS_MINIPCI_CARD && WIRELESS_RALINK_SOLUTION
		config WIRELESS_RT2860
			bool "Ralink RT2860 mini pci support"
			default y
			depends on WIRELESS_MINIPCI_CARD && WIRELESS_RALINK_SOLUTION

