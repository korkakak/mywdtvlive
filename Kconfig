			bool "support WIN7 media server's wakeonlan"
			depends on ENABLE_NETWORKING
			default n
		config DEVICE_NAME
	       		string "device name"
			default ""
			help
				The default value of device-name is "".
				This value will affect in /etc/hostname ,config(DMA_NAME) and server's name.
		menu "Media server list"
			depends on ENABLE_NETWORKING
			config HOME_ENTER_ALWAYS_SERVER_LIST
				bool "Home enter always server list (What the fuck?)"
				default y
