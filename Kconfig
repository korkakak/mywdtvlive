			bool "Realtek RTL8712 usb support"
			default y
			depends on WIRELESS_USB_DONGLE

		config WIRELESS_RTL8192CU
			bool "Realtek RTL8192CU usb support"
			default n
			depends on WIRELESS_USB_DONGLE

