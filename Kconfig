			bool "CONF_PIPE_AVI_PLAYER ??"
			default y
		config SPLIT_MEDIALOGIC
			bool "CONF_SPLIT_MEDIALOGIC ??"
			default y

		config PLAYER_NOTUSE_DEVICE_MEM
			bool "CONF_PLAYER_NOTUSE_DEVICE_MEM ??"
			default y

		config	HD_GFX_PHOTO_PLAYER
			bool "the new photo player with gfx"
			default n
			help
				The new photo player, it uses gfx to draw picture data.
				the new photo player is use rgb data to draw the picture.
				So, that means it needs more memory.

		config BUFFER_WIDTH_FOR_HD_GFX_PHOTO_PLAYER
			depends on HD_GFX_PHOTO_PLAYER
			int "the max decoded buffer width for photo player with gfx"
			default 2047
			help
				the buffer to save the decoded picture data. 
				it will use sw scaler to scale the resolution 
				when the BUFFER_WIDTH_FOR_HD_GFX_PHOTO_PLAYER X 
					BUFFER_HEIGHT_FOR_HD_GFX_PHOTO_PLAYER 
				less than the resolution of photo

		config BUFFER_HEIGHT_FOR_HD_GFX_PHOTO_PLAYER
			depends on HD_GFX_PHOTO_PLAYER
			int "the max decoded buffer height for photo player with gfx"
			default 2047
			help
				the buffer to save the decoded picture data. 
				it will use sw scaler to scale the resolution 
				when the BUFFER_WIDTH_FOR_HD_GFX_PHOTO_PLAYER X 
					BUFFER_HEIGHT_FOR_HD_GFX_PHOTO_PLAYER 
				less than the resolution of photo

		config SCREEN_WIDTH_FOR_HD_GFX_PHOTO_PLAYER
			depends on HD_GFX_PHOTO_PLAYER
			int "for 16-9 setting,the max screen width for photo player with gfx"
			default 1920
			help
				the output scaler size in 16-9 setting

		config SCREEN_HEIGHT_FOR_HD_GFX_PHOTO_PLAYER
			depends on HD_GFX_PHOTO_PLAYER
			int "for 16-9 setting,the max screen height for photo player with gfx"
			default 1080
			help
				the output scaler size in 16-9 setting

		config SCREEN_NORNAL_WIDTH_FOR_HD_GFX_PHOTO_PLAYER
			depends on HD_GFX_PHOTO_PLAYER
			int "for 4-3 setting,the max screen width for photo player with gfx"
			default 1440
			help
				the output scaler size in 4-3 setting

		config SCREEN_NORNAL_HEIGHT_FOR_HD_GFX_PHOTO_PLAYER
			depends on HD_GFX_PHOTO_PLAYER
			int "for 4-3 setting,the max screen height for photo player with gfx"
			default 1080
			help
				the output scaler size in 4-3 setting
	
		config HW_PHOTO_DECODER
			depends on HD_GFX_PHOTO_PLAYER
			bool "support the hw photo decoder, it needs more memory"
			default y
			help
				use hw photo decoder (jpeg) to decode the photo.

		config MULTI_PLAYER_CACHE
			depends on HD_GFX_PHOTO_PLAYER
			bool "use one process to allocate cache buffer for av and pic player"
			default y
			help
				Becasue we only cache the buffer for av player before. 
				but we also need to it for pic player. 
				so we implement a server to read malloc and free command 
					from av and pic player

		config MULTI_PLAYER_CACHE_FOR_AV_PLAYER
			depends on HD_GFX_PHOTO_PLAYER
			bool "the av player needs the memory cache"
			default y
			help
				this is for MULTI_PLAYER_CACHE server, 

		config MULTI_PLAYER_CACHE_FOR_PIC_PLAYER
			depends on HD_GFX_PHOTO_PLAYER
			bool "the pic player needs the memory cache"
			default y
			help
				this is for MULTI_PLAYER_CACHE server, 
				
		config MULTI_PLAYER_CACHE_FOR_OSD
			depends on HD_GFX_PHOTO_PLAYER
			bool "the osd ui needs the memory cache"
			default n
			help
				this is for MULTI_PLAYER_CACHE server, 

		config MULTI_PLAYER_CACHE_SIZE
			depends on HD_GFX_PHOTO_PLAYER
			int "unit is MB, the cache buffer size for av and pic player"
			default 77
			help
				this is for MULTI_PLAYER_CACHE server, 
				the server will allocate  MULTI_PLAYER_CACHE_SIZE(MB) buffer.
		choice
			prompt "MOV/MP4 player"
			config PIPE_MP4_PLAYER
				bool "Old version"
				help
					This is old mov/mp4 player.

			config QUICKTIME_PLAYER
				bool "New player for MOV and MP4 container"
				help
					New demuxer and player for MOV/MP4. Support embedded
					subtitle and multi-audio streams.
		endchoice	
		config USE_LOWWEIGHT_SYSTEM_MEMORY_IN_PROCESS_MPEG
			bool "Use low weight system memory while playing mpeg."
			default y if PRODUCT_EXT_LMP555
			default n
			help
				System will crash when play mpeg files if system memory is less than 20MB.
		config 3GP_FILE_SUPPORT
			bool "support 3gp file extension name"
			default n
			help
				support 3gp file extension name.but it only support mpeg4 codec , just like mp4 file
		config OGG_PLAYER
			bool "Support ogg demuxer and player."
			default n
			help
				Enable this config to support OGG demuxer and player.
		config IPCAM_PLAYER
			bool "Support ipcam(which made in alphanetworks.com) demuxer and player."
			default n
			help
				Enable this config to support ipcam(which made in alphanetworks.com) demuxer and player.
		config IPCAM_DISPLAY_ON_TOP_LAYER
			bool "Display ipcam on the top layer."
			default n
			help
				Enable this config to display ipcam on top layer.
		config RELOAD_DECODER
			bool "Run shell script to reload micro code when decoder dead."
			default n
			help
				Enable this config to support micro code reload.
		config SUBTITLE_DELAY
			bool "to support the user can adjust the subtitle show time"
			default n
			help
				the user can adust the subtitle showtime.
				currently, we use right/left key to handle it.
		config VIDEO_PENDING_RELOAD_MICROCODE
			bool "reload micro code when video pending"
			default n
			help
				reload microcode when video decoder pending. 
				currently, we use it in sigma psfdemux
		config DIVX_SUBTITLE_SUPPORT
			bool "Support Divx Subtitle"
			default n
			help
				Enalbe this to support Divx Subtitle
		config FLV_PLAYER
			bool "Support flv file format"
			default n
			help
				support flv file 
		config M4V_SUPPORT_TRICKMODE
			bool "m4v support trickmode"
			default y
			help
				make m4v extern filename supports trickmode
		config PGS_SUBTITLE_SUPPORT
			bool "Support PGS Subtitle"
			default n
			help
				Enable this to support PGS Subtitle

		config SW_DEMUX_PLAYER
			bool "enable sw demux for ps and ts format"
			default n
			help
				currently, we use sigma hw demux to play dvd
				but, there is some problem on hw demux for lacie.
				so we use sw demux to play dvd

		config YOUTUBE_MOV_CACHE_PLAYER
			bool "we use cache data to play mov youtube file"
			default n
			help
				because some different playback method, we use different
				player to play youtube mov file.
		config SW_DEFAULT_BPS_FOR_YOUTUBE
			int "the default byterate for youtube"
			default 32768
			depends on YOUTUBE_MOV_CACHE_PLAYER
			help
				if we can not get the byte rate for youbute , we will use this value.
		config SW_MIN_BUFFERING_TIME_FOR_YOUTUBE
			int "the min buffering time for youtube"
			default 1
			depends on YOUTUBE_MOV_CACHE_PLAYER
			help
				the min buffering time for youtube.
		config SW_MAX_BUFFERING_TIME_FOR_YOUTUBE
			int "the max buffering time for youtube"
			default 15
			depends on YOUTUBE_MOV_CACHE_PLAYER
			help
				the max buffering time for youtube.
		config SW_FIRST_MAX_BUFFERING_TIME_FOR_YOUTUBE
			int "the max buffering time for youtube firstly"
			default 6
			depends on YOUTUBE_MOV_CACHE_PLAYER
			help
				the max time when we do bffering for youtube firstly.
		config FAKE_BD_PLAYBACK
			bool "support fake BD playback"
			default y
			help
				we use max filesize and pmt info. to guess the whole movie . so we can know which file we should playback
		
		config SAVE_PIC_ROTATE_INFO
			depends on HD_GFX_PHOTO_PLAYER
			bool "save picture player rotate infor"
			default n
			help
				when we rotate the current picture. we will save the info into the same path. and if we can not save. we will save into memory array. then if we play the same file again. we will use last rotate info.

		config DO_NOT_DOWNSAMPLE_FOR_ABOVE_48K_AUDIO
			bool "for above 48k audio , we will not do downsample"
			default n
			help
				for above 48k audio , we will not do downsample. TODO : we should check the HDMI EDID 

		config UNO_ENABLE_FORCE_VIDEO_REPEAT_MODE
			bool "to force video repeat mode for MP test"
			default n
			depends on PRODUCT_EXT_UNO
			help
				To force video repeat mode for MP test.
		config SUPPORT_AUDIO_REPLAY_GAIN
			bool "support audio replay gain function"
			default n
			help
				support audio replay gain function, currently, we only support mp3 and flac format
				the replay gain is we can set different volume for different file.
	endmenu
	menu "Misc. features"
		config OSDKEY_MAPPING
			bool "Support engine key mapping"
			default n
			help
				Allow key mapping which can map the original osde_key to the newer key in engine. 
				This can be used for WDTV RV so that color key can map to real key.
		config KEYBOARD_IR_INJECTION
			bool "Inject keyboard as IR"
			default y
			help
				Currently, we are running dmaosd in the background.
				So that we can't use keyboard to as IR. This is hard
				for QA to run batch commands. So I create a FIFO /tmp/ir_inject
				for QA to inject keys.
		config WIZARD_IGNORE_QUEST_SERVER
			bool "Wizard ignore quest server ??"
			default y
		config VOLUME_RNAGE_WORKAROUND
