			depends on WIRELESS_RT2870
			prompt "select driver version"
			config RT2870_VERSION_2_4_0_0
				bool "2.4.0.0"
			config RT2870_VERSION_2_1_0_0
				bool "2.1.0.0"
				depends on !PLATFORM_SMP8654_SDK_2_6_29_17_ORIGINAL_KERNEL_PATCH
		endchoice

		config WIRELESS_RT3070
			bool "Ralink RT3070 usb support"
			default y
			depends on WIRELESS_USB_DONGLE && WIRELESS_RALINK_SOLUTION
