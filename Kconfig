			default y
			depends on WIRELESS_USB_DONGLE && !PLATFORM_SMP8654_SDK_2_6_29_17_ORIGINAL_KERNEL_PATCH

		config WIRELESS_RT2870
			bool "Ralink RT2870 usb support"
			default y
			depends on WIRELESS_USB_DONGLE && WIRELESS_RALINK_SOLUTION
