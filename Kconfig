			default y if (PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_WDTV_RV)
			default n if PRODUCT_EXT_LMP555
			depends on DMA_LIVE365
			
		config DMA_FLICKR
			bool "Enable filckr function"
			default y if (PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_WDTV_RV)
			depends on (ENABLE_NETWORKING && BROWSE_HANDLER)
			menu "Flickr options"
				depends on DMA_FLICKR
				config DMA_FLICKR_DOWNLOAD
					bool "Enable flickr downloading"
					default n
				config DMA_FLICKR_WITH_SEARCH_HEAD
					bool "Enable flickr with search on static head"
					default y if (PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV) 

				choice
					prompt "Flickr API key"
					config FLICKR_API_KEY_WD
						bool "WD"
						depends on PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
					config FLICKR_API_KEY_ALPHA
						bool "Alpha Generic"
					config FLICKR_API_KEY_LACIE
						bool "Lacie Generic"
				endchoice
				config DMA_FLICKR_API_KEY
					string
					default "" if BUILD_GPL_FIRMWARE
					default "7f767c35af1280480a9987ec9b4cb964" if FLICKR_API_KEY_WD
					default "547364fd6e54ec7a456b73e467147946" if FLICKR_API_KEY_ALPHA
					default "77211bc3b62bd13183c817db421d23d7" if FLICKR_API_KEY_LACIE
				config DMA_FLICKR_SCRECT_KEY
					string
					default "" if BUILD_GPL_FIRMWARE
					default "9f243ce2dc6d1a9b" if FLICKR_API_KEY_WD
					default "a483f14791816714" if FLICKR_API_KEY_ALPHA
					default "955138f2ee6cf0a7" if FLICKR_API_KEY_LACIE
			endmenu
		config DMA_PANDORA
			bool "Enable pandora function"
			default y if (PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV)
			depends on (ENABLE_NETWORKING && BROWSE_HANDLER && !BUILD_GPL_FIRMWARE)
		config OSSP
			bool "Enable Online Service Slave Process. Some online services need to use this module."
			default n
			depends on ENABLE_NETWORKING && BROWSE_HANDLER && !BUILD_GPL_FIRMWARE
			help
				It should be enabled while MEDIAFLY or DEEZER is need to be supported.
		config DMA_MEDIAFLY
			bool "Enable MediaFly. Please choose HTTP_HEADER_KEEP_ORIGNAL_HOSTNAME as y below because the server wants hostname which the server gives."
			default n
			depends on OSSP
		config MEDIAFLY_COMBINE_POPULAR_MYCHANNEL
			bool "Combine popular channel in my channel"
			default n
			depends on DMA_MEDIAFLY
		config MEDIAFLY_MANAGER_USER_IN_DASHBOARD
			bool "Add manager user in dashboard"
			default n
			depends on DMA_MEDIAFLY
		config MEDIAFLY_SEARCH_IN_DASHBOARD
			bool "Add search in dashboard"
			default n
			depends on DMA_MEDIAFLY
		config MEDIAFLY_MCODE_IN_DASHBOARD
			bool "Add mcode in dashboard"
			default n
			depends on DMA_MEDIAFLY
		config MEDIAFLY_COMBINE_CONTENT_SOURCE
			bool "Combine user content source with server content source"
			default n
			depends on DMA_MEDIAFLY
		config MEDIAFLY_SEARCH_WITH_SEARCHTYPE
			bool "Filter search result with search type"
			default n
			depends on DMA_MEDIAFLY
		config MEDIAFLY_API_3_0
			bool "API 3.0"
			default n
			depends on DMA_MEDIAFLY
		config MEDIAFLY_USE_SN_FOR_DEVICE_ID
			bool "Use serial number as part of device id"
			default n
			depends on DMA_MEDIAFLY
		config MEDIAFLY_OFFICIAL_PROFILE
			bool "Use the profile with call signature"
			default y
			depends on DMA_MEDIAFLY
		config DMA_DEEZER
			bool "Enable Deezer"
			default n
			depends on OSSP
		config DMA_RADIOTIME
			bool "Enable RadioTime"
			default n
			depends on OSSP
		config DMA_CINEMANOW
			bool "Use CinemaNow SDK"
			default n
			depends on !BUILD_GPL_FIRMWARE
		config DMA_BLOCKBUSTER_UI_INSTANCE
			bool "Enable BlockBuster UI Instance"
			depends on DMA_CINEMANOW
		config DMA_BESTBUY_UI_INSTANCE
			bool "Enable Bestbuy UI Instance"
			depends on DMA_CINEMANOW
		config CHANGE_CINEMANOW_PRODUCT_MODE
			bool "Enable back door to change cinemanow product mode"
			depends on DMA_CINEMANOW
		config CINEMANOW_DO_NOT_GET_ENVIRONMENT_SETTING_FROM_SERVER
                        bool "always point device to production base server"
                        default n
                        depends on (PRODUCT_EXT_WDTV_VILLA_BUNGALOW && DMA_CINEMANOW)
		config CINEMANOW_PREFERENCE_STYLE_V2
			bool "Show Preference with Style v2"
			default n
			depends on DMA_CINEMANOW
		config CLEAR_PREFETCH_WHEN_LEAVING
			bool "Clear prefetch resource when leaving Cinemanow relative page"
			default n
			depends on DMA_CINEMANOW
		config USE_PANDORA_OFFICAL_URL
			bool "enable it when pandora approve the firmware"
			default n
			depends on DMA_PANDORA
			help
				Enable this option will change the pandora server url to offical's.
		config PANDORA_SUPPORT_AUTOCOMPLETE
			bool "enable auto complete function on create station page."
			default n
			depends on DMA_PANDORA
			help
				Enable this option will push create station page with auto complete.
		config DMA_PICASA
		    bool "Enable Picasa function"
			default n if (PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA)
	        depends on (ENABLE_NETWORKING && BROWSE_HANDLER && !BUILD_GPL_FIRMWARE)
	        help
			    This feature enables Picasa supports.
				While enabling this feature, the picasa library will be installed and browse handler 
				will support Picasa function. The UI page will not depend on this feature.
			menu "Picasa options"
				depends on DMA_PICASA
				config DMA_PICASA_WITH_SEARCH_HEAD
                    bool "Enable picasa with search on static head"
                    default y if (PRODUCT_EXT_WDTV_RV || PRODUCT_EXT_LMP555)
			endmenu
        config DMA_YOUTUBE
            bool "Enable Youtube function"
            default n if (PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_WDTV_RV)
            depends on (ENABLE_NETWORKING && BROWSE_HANDLER && !BUILD_GPL_FIRMWARE)
			help
				This feature enables Youtube supports. 
				While enabling this feature, the youtube library will be installed and browse handler
				will support Youtube function. The UI page will not depend on this feature.		
			menu "Youtube options"
				depends on DMA_YOUTUBE
				config DMA_YOUTUBE_DOWNLOAD
					bool "Enable youtube downloading"
					default n
				config DMA_YOUTUBE_RECENT_VIDEOS
					bool "Enable youtube feature of recent videos"
					default n
					help
						This feature has some side effect if we need mpeg4 formatted video streams.
						Most recent videos may just uploaded but the transcode to mpeg4 format may
						not completed.
				config DMA_YOUTUBE_SEARCH_LIST
					bool "Enable search list for youtube"
					default n
					help
						If turned on, it will check /HDD_mount_point/yt_search_list file and generates
						a list to search from the file.

				config DMA_YOUTUBE_STRONG_AUTH
					bool "Enable youtube strong device authentication process"
					default n if RESOURCE_VILLA
					default n
				config DMA_YOUTUBE_FILTEROUT_VIDEO
					bool "Enable to filter out videos that doesn't support mpeg4"
					depends on DMA_YOUTUBE_STRONG_AUTH
					default n
				config DMA_YOUTUBE_AUTOGEN_SN
					bool "To auto generate a fake S/N(id) if the system doesn't have one."
					depends on DMA_YOUTUBE_STRONG_AUTH
					default n
					help
						To auto generate a fake S/N(id) if the system doesn't have one.
						This auto generated S/N will not set to system's flash and will not be stored.
						It is only used for YouTube device registration.
				config DMA_YOUTUBE_DEBUG
					bool "Enable to print out debug messages."
					default n
				config DMA_YOUTUBE_DEBUG_TO_FILE
					bool "Enable to save log to a local file."
					default n
				config DMA_YOUTUBE_PRODUCT_NAME
					string
					default "WDTVHDMediaPlayer" if RESOURCE_VILLA
					default "HDDigitalMediaPlayer" 
				config DMA_YOUTUBE_CLIENT_ID
					string
					default "ytapi-WesternDigital-WDTVHDMediaPlaye-5qo56c3v-0" if RESOURCE_VILLA
					default "ytapi-ALPHANetworks-HDDigitalMediaPl-g2cgn5e5-0" if RESOURCE_TVDOCK_ALPHA
					default "ytapi-MyMediaPlayer-1234567-0"
				config DMA_YOUTUBE_DEVELOPER_KEY
					string
					default "AI39si577Qh0xIi5dJPtTY0IxYvwb8zgGWSIwIqe42UHaYw5czTuf7_Yu1L1T3uvChPllvSD9YTt3vGPtBokPX7BLKek-ght3Q" if RESOURCE_VILLA
					default "AI39si4KvhT36nM1-RRla4mUPAUYmHrPdApNT0pgC9aywq8ABMrWnuNgO2lKklJDYf6gSOn6apt9cL93D36PSfmFdoD-1C8fZQ" if RESOURCE_EM7075
					default "AI39si7qjqVjcP1ElCDBs8Brr18-4k-4s5wLHxvzoDRLPR9RhZ8CdXht_DAd--NHItbDvmDE1Au8RCjrpXc6udZZ0AWy_p0c7A" if RESOURCE_LMP555
					default "AI39si6qtU8Yk71b6FVhnFqPIUsZKLG0_ypuJuilP4Hal5Sot0GJNJKMTaJ9bt5bdhNu8Yw5UZmbcpM4abyA_wtH1ZJsQWxMsQ"
				config DMA_YOUTUBE_DEVELOPER_SECRET
					string
					default "NHcVJX4QAAxtaiVrUIXP0A==" if RESOURCE_VILLA
			endmenu
        config DMA_YOUTUBE_LEANBACK
            bool "Enable Youtube leanback"
            default n if (PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_WDTV_RV)
            depends on (ENABLE_NETWORKING && QT_WEB_KIT)
			help
				This feature enables Youtube leanback supports. 
				While enabling this feature, the youtube library will be installed and browse handler
				will support Youtube function. The UI page will not depend on this feature.		
				
			config DMA_FACEBOOK
				bool "Enable Facebook function"
				default n
				depends on (ENABLE_NETWORKING && BROWSE_HANDLER && !BUILD_GPL_FIRMWARE)
				help
					This feature enables Facebook supports.
			menu "Facebook options"
				choice
					depends on DMA_FACEBOOK
					default DMA_FACEBOOK_DEVELOPER_TEST
					prompt	"Select the type of keys."
					config	DMA_FACEBOOK_DEVELOPER_TEST
						bool "Facebook developer test"
						help
							Three keys should be specified to Facebook for each API calls : 
								Application ID, API Key, and Application Secret.
							Facebook Server provides 2 packs of keys above, select this for developing time.
					config	DMA_FACEBOOK_RELEASE_VERSION
						bool "Facebook release version"
						help
							Three keys should be specified to Facebook for each API calls : 
								Application ID, API Key, and Application Secret.
							Facebook Server provides 2 packs of keys above, select this for final release.
				endchoice	
				config DMA_FACEBOOK_APP_ID
					string
					default "204923868039" if (RESOURCE_VILLA && DMA_FACEBOOK_DEVELOPER_TEST)
					default "please-fill-in-when-final-release" if (RESOURCE_VILLA && DMA_FACEBOOK_RELEASE_VERSION)
				config DMA_FACEBOOK_API_KEY
					string
					default "328de2302e6863f20818f11341603233" if (RESOURCE_VILLA && DMA_FACEBOOK_DEVELOPER_TEST)
					default "please-fill-in-when-final-release" if (RESOURCE_VILLA && DMA_FACEBOOK_RELEASE_VERSION)
				config DMA_FACEBOOK_APP_SECRET
					string
					default "c118ba8bf718108139fcaec8fd7f973e" if (RESOURCE_VILLA && DMA_FACEBOOK_DEVELOPER_TEST)
					default "please-fill-in-when-final-release" if (RESOURCE_VILLA && DMA_FACEBOOK_RELEASE_VERSION)

			endmenu
               config DMA_SHOUTCAST
                       bool "Enable Shoutcast function"
                       default n
                       depends on (ENABLE_NETWORKING && BROWSE_HANDLER)
                       help
				This feature enables Shoutcast supports.
		config HOWL
			bool "Support Bonjour"
			depends on ENABLE_NETWORKING
			default n
		config BONJOUR_EDCP_SERVICE
			bool "Support EDCP service of Bonjour"
			depends on HOWL && PRODUCT_EXT_LMP555
			default n 
		config LACIE_BONJOUR_MODEL_NAME
			string "[Lacie Only] model_name of _device-info._tcp (Bonjour)"
			depends on HOWL && PRODUCT_EXT_LMP555
			default "lacinemaclassichd"
			help
				This option is only for Lacie's Bonjour Protocl.
				Lacie want to add two bonjour services:
					[Mini_HD]: "[MACHINE_NAME]" _device-info._tcp local. 0 "model=lacinemaminihd"
					[Classic HD]: "[MACHINE_NAME]" _device-info._tcp local. 0 "model=lacinemaclassichd"
				So, we use this LACIE_BONJOUR_MODEL_NAME to save model name.
		config ITUNE_SUPPORT
			bool "Support iTune discovery and playback from iTune"
			depends on ENABLE_NETWORKING
			default n

