					depends on PLATFORM_SMP8670
			endchoice

			choice
				prompt "Choose kernel proprietary"
				depends on PLATFORM_SMP8654 || PLATFORM_SMP8670
				config LINUX_KERNEL_2_6_22_19_19_NAND_FLASH_DRIVER
					bool "Proprietary from Linux_kernel_2.6.22.19-19 package"
					depends on PLATFORM_SMP8654
				config LINUX_KERNEL_2_6_22_19_27_NAND_FLASH_DRIVER
					bool "Proprietary_27 from Linux_kernel_2.6.22.19-27 package for New NAND flash drive"
					depends on PLATFORM_SMP8654
				config LINUX_KERNEL_2_6_22_19_40_NAND_FLASH_DRIVER
					bool "proprietary_40 from Linux_kernel_2.6.22.19-40 package for New NAND flash drive"
					depends on PLATFORM_SMP8670
				config LINUX_KERNEL_2_6_29_17_NAND_FLASH_DRIVER
					bool "Proprietary_29-17 from Linux_kernel_2.6.29-17 package for New NAND flash drive"
					depends on PLATFORM_SMP8654
			endchoice

			config DTS_CHIP_SET
				bool "DTS_chip_set"
				default n
				help
					DTS chip set,We change the sigma SDK (mruafw) for DTS.You can see scripts/target-smp8654.mk.

			config NAND_FLASH_PATCH_05122010
				bool "NANDv2_PATCH.DAT and EZBOOT_fix_NAND_flash_05122010.patch"
				default y
				help
					Sigma give us the NAND flash patch: NANDv2_PATCH.DAT and EZBOOT_fix_NAND_flash_05122010.patch

			config SIGMA_LIBSAMPLE2
				bool "support sigma libsamplev2 player"
				default n
				help
					Currently, our player is under sigma libsamplev1. when we enable this config. we will use sigma libsample v2 to do playback except psfdemux (hw demux) and HW photo player.
					and I only verify this on 3.8.5 SDK. if we want to use other SDK. please add related libname in the target-smp8654.mk

			config HAVE_VIDEO_CODEC_RMVB
				bool "Use SMP86xx chip set which support RMVB codec"
				default n
				help
					Only can use in SMP86xx chip set which support video codec rmvb.

			config PLATFORM_SMP8654_TOOLCHAIN_3_6_0_CACHE
				bool "Enable toolchain compile cache (it seems to related nand flash write)"
				depends on PLATFORM_SMP8654_TOOLCHAIN_3_6_0
				default y 

			config TOOLCHAIN_FILENAME
				string
				default "toolchain_smp86xx_3.4.0.tgz" if PLATFORM_SMP8654_TOOLCHAIN_3_4_0
				default "smp86xx_toolchain_R3.6_nofpu.tgz" if PLATFORM_SMP8654_TOOLCHAIN_3_6_0 && PLATFORM_SMP8654_TOOLCHAIN_3_6_0_CACHE
				default "toolchain_smp86xx_3.6.0.tgz" if PLATFORM_SMP8654_TOOLCHAIN_3_6_0 && ! PLATFORM_SMP8654_TOOLCHAIN_3_6_0_CACHE
				default "mips-4.3.tgz" if PLATFORM_SMP8654_TOOLCHAIN_GNU_4_3_2
			config CROSS_BIN
				string
				default "/opt/smp86xx_toolchain_3.4.0/bin/" if PLATFORM_SMP8654_TOOLCHAIN_3_4_0
				default "/opt/smp86xx_toolchain_R3.6_nofpu/build_mipsel_nofpu/staging_dir/bin/" if PLATFORM_SMP8654_TOOLCHAIN_3_6_0 && PLATFORM_SMP8654_TOOLCHAIN_3_6_0_CACHE
				default "/opt/smp86xx_toolchain_R3.6/bin/" if PLATFORM_SMP8654_TOOLCHAIN_3_6_0 && ! PLATFORM_SMP8654_TOOLCHAIN_3_6_0_CACHE
				default "/opt/mips-4.3/bin/" if PLATFORM_SMP8654_TOOLCHAIN_GNU_4_3_2
			config CROSS
				string
				default "$(CROSS_BIN)/mipsel-linux-"
			config CROSS_PREFIX
				string
				default "/opt/smp86xx_toolchain_3.4.0/" if PLATFORM_SMP8654_TOOLCHAIN_3_4_0
				default "/opt/smp86xx_toolchain_R3.6_nofpu/build_mipsel_nofpu/staging_dir/" if PLATFORM_SMP8654_TOOLCHAIN_3_6_0 && PLATFORM_SMP8654_TOOLCHAIN_3_6_0_CACHE
				default "/opt/smp86xx_toolchain_R3.6/" if PLATFORM_SMP8654_TOOLCHAIN_3_6_0 && ! PLATFORM_SMP8654_TOOLCHAIN_3_6_0_CACHE
				default "/opt/mips-4.3/" if PLATFORM_SMP8654_TOOLCHAIN_GNU_4_3_2
		endmenu

		config SIGMA_SDK_VERSION
			string
			default "2.8.3.0" if PLATFORM_SMP8634_SDK_2_8_3_0 
			default "2.8.4.1" if PLATFORM_SMP8634_SDK_2_8_4_1 
			default "3_5_0" if PLATFORM_SMP8654_SDK_3_5_0 
			default "3_6_0_rc11" if PLATFORM_SMP8654_SDK_3_6_0_rc11 
			default "3_6_0" if PLATFORM_SMP8654_SDK_3_6_0 
			default "3_6_1_rc2" if PLATFORM_SMP8654_SDK_3_6_1_rc2
			default "3_7_0" if PLATFORM_SMP8654_SDK_3_7_0
			default "3_8_0" if PLATFORM_SMP8654_SDK_3_8_0
			default "3_8_0" if PLATFORM_SMP8654_SDK_3_8_1
			default "3_8_0" if PLATFORM_SMP8654_SDK_3_8_2
			default "3_8_0" if PLATFORM_SMP8654_SDK_3_8_3
			default "3_8_0" if PLATFORM_SMP8654_SDK_3_8_4
			default "3_8_0" if PLATFORM_SMP8654_SDK_3_8_5
			default "3_8_0" if PLATFORM_SMP8654_SDK_3_8_5_WD0
			default "3_8_0" if PLATFORM_SMP8654_SDK_3_8_7
			default "3_8_0" if PLATFORM_SMP8654_SDK_3_8_8 || PLATFORM_SMP8670_SDK_3_8_8

		menu "x86 compile options"
			depends on PLATFORM_X86
		endmenu

	endmenu

	menu "Component to build"
		config BUILD_DMAOSD
			bool "build dmaosd"
			default	y
		config BUILD_DMARENDER
			bool "build DMARender"
			default	y if !PLATFORM_X86
		config BUILD_MISC
			bool "build misc utility"
			default y
		config BUILD_MEDIALOGIC
			depends on !PLATFORM_X86
			bool "build MediaLogic"
			default y
		config BUILD_EXTERNAL_PACKAGES
			bool "build external packages"
			default y
		config	BUILD_ROOTFS
			bool "Install rootfs"
			default y
		config	BUILD_ROOTFS_PRIMARY_SYSTEM
			depends on !PLATFORM_X86
			bool "Install primary system rootfs"
			default y
		config BUILD_FIRMWARE
			bool "Build final firmware"
			default y
	endmenu



	menu "Repository"
		config	REPOSITORY_IP
			string "Repository IP address"
			default	"172.19.149.41"
	
		config	REPOSITORY_PATH
			string "Repository path"
			default "dmax/trunk"
		config	SPECIFY_SVN_VERSION
			bool "Specify SVN version"
			default n	
		config	SVN_VERSION
			depends on SPECIFY_SVN_VERSION
			int "version"
	endmenu
endmenu

menu "Features"
	config DBUS
		bool "Enable DBUS"
		default	n if PLATFORM_X86
		default	n
		help
			I decided to use DBUS as status BBS.
	menu "Networking features"
		config ENABLE_NETWORKING
			bool "Enable networking"
		menu "Built-in web server support"
			depends on ENABLE_NETWORKING
			config WEB_SERVER_APACHE
				bool "Apache web server support"
				default n
			config WEB_SERVER_APACHE_INSTALL_PATH
				depends on WEB_SERVER_APACHE
				string "Install path"
				default "/webserver"
			config WEB_SERVER_PHP
				bool "PHP support"
				default y
				depends on WEB_SERVER_APACHE 
			


		endmenu

		config WD_ORION
			bool "WD's orion support"
			default n
			depends on PRODUCT_EXT_WDTV_RV && !BUILD_GPL_FIRMWARE 
		config WD_ORION_BLOCK_80_PORT_WAN_ACCESS
			bool "Block 80 port's WAN access"
			default n
			depends on WD_ORION
			select	OPENSSL
			help
				This is requested by WD. They don't want 80 port to 
				be accessed from WAN.

		config DMA_SLAVEMODE 
			bool "Support slave mode for external CP to play"
			default n
			depends on ENABLE_NETWORKING
			help
				If you want to use external CP to play media file to device, you should disable this option.
				If render get external CP command, OSD will hide page to play media file.
		config DMA_SLAVEMODE_SUPPORT_FF_REV_FUNCTION_FOR_VIDEO_PLAYING
			bool "[Slavemode] support ff/rev function for video_ex_playing"
			default n if PRODUCT_EXT_LMP555
			depends on DMA_SLAVEMODE
			help
				If you want to support ff/rev function on video_ex_playing, please turn on this option.
		config DMA_SLAVEMODE_DONT_AUTO_POP_PLAYING_PAGE
			bool "[Slavemode] Don't pop playing page when continuous playing by slave mode "
			default y if PRODUCT_EXT_LMP555
			depends on DMA_SLAVEMODE
			help
				By default playing page will be popped when media file is changed. This is caused by the STOP command sent by control point.
				However, for device which is used in shop as demo machine, it should not pop to parent page when changing files.
		config NETSERVICE_NOT_APPLY_COMMAND
			bool "Do not apply networking commands"
			default n
			help
				This one is tricky.
				If you are debuging on x86 platform, you may use remote login and 
				you may not want the IP address to be changed. If so, you should
				turn this on.
		config SUPPORT_IP_LOCATOR
			bool "Support ip locator(get country code or time zone by IP)"
			default n
			depends on ENABLE_NETWORKING
			help
				If you want to use current ip to get country-code or time zone or other(please refer
				http://www.geobytes.com/IpLocator.htm?GetLocation to see), you could enbale this.
		config ENABLE_REGISTRATION
			bool "Enable on-line registration"
			default n
			depends on ENABLE_NETWORKING && (PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV)
			help
				This feature is used to register on line (only for WD)
		config SUPPORT_CHECK_CONNECTION
			bool "Support check connection"
			default n
			depends on ENABLE_NETWORKING
			help
				If you want to support "check connection" (check internet state is ready or not), please
				turn on this option and set connection host in CHECK_CONNECTION_HOST.
		config CHECK_CONNECTION_HOST
			string "Check connection host"
			depends on SUPPORT_CHECK_CONNECTION
		config LAN_INTERFACE
			string "LAN interface"
			default	"eth0"
		config ENABLE_AUTOIP
			bool "enable autoip"
			default y 
			depends on ENABLE_NETWORKING
		config IPERF_TOOL
			bool "iperf tool"
			default n
			depends on ENABLE_NETWORKING
		config YOTA_NETWORK_SUPPORT
			bool "Yota support"
			default n
			depends on !BUILD_GPL_FIRMWARE
		config WIRELESS_SUPPORT
			bool "wireless support"
			default n
		config DROP_DUPLICATE_SSID
			bool "Drop duplicate SSID in site survey list"
			default y
			depends on WIRELESS_SUPPORT
		config WIRELESS_PROFILE_SUPPORT
			bool "enable wireless profile support"
			default y
			depends on WIRELESS_SUPPORT && ( PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_LMP555 || PRODUCT_EXT_ALPHA || PRODUCT_EXT_WDTV_RV)
			help
				When this option is enabled, wireless will remember five wireless profile,
				and try to associate them while device boot up. 
				Notice: your must add config to save these profile information in config file.
		config WIRELESS_PROFILE_NUM
			int "wireless profile number"
			default 5
			depends on WIRELESS_PROFILE_SUPPORT
			help
				The total number of wireless profile.
		config WIRELESS_PROFILE_PAGE_SUPPORT
			bool "enable wireless favorite profile page"
			default y
			depends on WIRELESS_PROFILE_SUPPORT
			help
				When this option is disabled, the system page don't display wireless favorite profile page
				in network for user to configure. And system uses the default order(0->1->2->3->4) to 
				save/connect wireless profiles.
		config WIRELESS_PREFERENCE_IN_SETUP_WIZARD
			bool "enable wireless preference in network setup wizard"
			default y
			depends on WIRELESS_PROFILE_SUPPORT && (PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV)
			help
				Enable wireless preference in network setup wizard
		config WIRELESS_TOOLS
			bool "Enable Wireless tools"
			default y
			depends on WIRELESS_SUPPORT
		config WLAN_INTERFACE
			string "WAN interface"
			default "eth1"
			depends on WIRELESS_SUPPORT
		config WIRELESS_SITE_SURVEY_SORT_BY_SIGNAL_STRENGTH
			bool "site survey result sort by signal strength support"
			default y
			depends on WIRELESS_SUPPORT
			help	
				Enable this feature, if you want the site survey result sort by signal strength(strong->weak).
		config WIRELESS_RALINK_SOLUTION
			bool "Ralink solution support"
			default y if OEM_LMP555_LACIE
			depends on WIRELESS_SUPPORT
		config WIRELESS_MINIPCI_CARD
			bool "Mini PCI card support"
			default y if OEM_LMP555_LACIE
			depends on WIRELESS_SUPPORT

		config WIRELESS_MARVELL
