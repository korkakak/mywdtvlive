			default y if PRODUCT_EXT_LMP555
			default n
		config DEFAULT_VOLUME
			int "default volume value"
			default 40
			depends on VOLUME_RNAGE_WORKAROUND
		config VOLUME_SHOW_TIME
			int "volume control bar show time"
			default 4
			depends on VOLUME_RNAGE_WORKAROUND
		config FIXED_VOLUME_VALUE
			int "Fixed volume value"
			default 50
			depends on !VOLUME_RNAGE_WORKAROUND
		config OSD_VOLUME_KEY_WORK
			bool "Enable volume adjustment"
			default n 
