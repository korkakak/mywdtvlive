				bool "save theme/desktop on USB0"
			config THEME_DESKTOP_STORE_ON_USB1
				bool "save theme/desktop on USB1"
			config THEME_DESKTOP_STORE_ON_SATA
				depends on MOUNT_LOCAL_SATA_DRIVE
				bool "save theme/desktop on SATA"
		endchoice
