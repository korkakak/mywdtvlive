				bool "Move default M server first (What the fuck?)"
				default y
		endmenu
			
		menu "Internal Media Server"
			depends on ENABLE_NETWORKING
			config UPNP_MEDIA_SERVER_SUPPORT
				bool "UPnP media server support"
				default n
				depends on STORAGE_SUPPORT && !BUILD_GPL_FIRMWARE
			config DMA_SUPPORT_LOOPBACK
				depends on UPNP_MEDIA_SERVER_SUPPORT
				bool "Media server binds on lo device"
				default y
			menu "select UPNP server"
				depends on UPNP_MEDIA_SERVER_SUPPORT
				config TWONKYMEDIA_SERVER_SUPPORT
					bool "Twonkymedia server support"
					default y
			endmenu
			comment "twonky server feature"
			config TWKY_PATH
				depends on TWONKYMEDIA_SERVER_SUPPORT
				string
				default "../usr/local/TwonkyVision" if PLATFORM_X86
	                        default "/usr/local/TwonkyVision" if PLATFORM_SMP8654 || PLATFORM_SMP8670
			config TWKY_SUPPORT_TO_SAVE_DB_IN_STAT
				depends on TWONKYMEDIA_SERVER_SUPPORT && (PLATFORM_SMP8654 || PLATFORM_SMP8670)
				bool "support save twky-database in sata"
				default n
				help
					This option is only used for 8654 platform. It's used to save the database of twonkymedia-server in built-in SATA hard disk.
			config TWKY_DISABLE_WEB_CONFIG_PAGE
                                depends on TWONKYMEDIA_SERVER_SUPPORT && (PLATFORM_SMP8654 || PLATFORM_SMP8670)
                                bool "disable twonkymedia-server web config page"
                                default y if PRODUCT_EXT_LMP555
                                help
                                        This option is only used for 8654 platform. If you want to disable web config page for twonkymedia server, please enable this option.
			config SAMBA_SERVER
				bool "samba server support"
				default n
				depends on STORAGE_SUPPORT
			comment "samba server feature"
			config SAMBA_SERVER_SUPPORT_SECURITY
				bool "support samba server's security"
				depends on (PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV) && SAMBA_SERVER && SUPPORT_SYSTEM_ACCOUNT
				default y
				help
					If you want to support username/password for your samba server, please enable this option.
			config SAMBA_FTRUNCATE_PATCH
				depends on SAMBA_SERVER
				bool "Don't generate the file before copying."
				default n
			config SAMBA_SERVER_SCRIPT
				depends on SAMBA_SERVER
				string "samba server script path"
				default "/bin/run_samba"
			config SAMBA_SERVER_DESCRIPTIVE_COMMENT_STRING
				depends on SAMBA_SERVER
				string "samba server descriptive comment string"
				default "This is my samba server"
				help
					You can modify this option to change samba descriptive string
			choice
				prompt "[SAMBA SERVER]Handle Samba Server Duplicated Name"
				depends on SAMBA_SERVER
				default SAMBA_SERVER_RENAME_DUPLICATE_NAME_METHOD1 if PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_IMEDIA_HD100 || PRODUCT_EXT_FUNTWIST || PRODUCT_EXT_ALPHA || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
				default SAMBA_SERVER_RENAME_DUPLICATE_NAME_METHOD2 if PRODUCT_EXT_LMP555
				config SAMBA_SERVER_RENAME_DUPLICATE_NAME_METHOD1
					bool "rename duplicate name method 1"
					help
						We don't rename first plug-in USB's partiotion name.
						Ex:
						1. plug in USB1: aa, aa-1
						2. plug in USB2: aa
						   aa is duplicate so we must rename it as aa-1 but aa-1 is also duplicate 
						   then we rename it as aa-2
				config SAMBA_SERVER_RENAME_DUPLICATE_NAME_METHOD2
					bool "rename duplicate name method 2"
					help
						We will rename first plug-in USB's partition name.
						Ex:
						1. plug in USB1: aa, aa-1
						2. plug in USB2: aa
						3. sort as: aa, aa, aa-1
						4. rename as: aa-1, aa-2, aa-1-1
			endchoice
		endmenu

		config NETATALK
			bool "Support AFP(Apple Filing Protocol)"
			depends on ENABLE_NETWORKING
			default n

		config DMA_VILLA_ONLINE_MATRIX
			bool "Online matrix style UI"
			default y if (PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA)
			depends on (ENABLE_NETWORKING)

		config DMA_LIVE365
