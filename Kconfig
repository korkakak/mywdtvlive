			bool "enable logo for WMC"
			default y
		config SAFE_MODE
			bool "Safe mode (What the hell?)"
			default y
		config BROWSE_HANDLER 
			bool "browse handler"
			default y
		config BROWSE_CACHE
			bool "Enable browse cache of browse handler"
			default y if BROWSE_HANDLER
			depends on BROWSE_HANDLER
		config USE_SERVER_HANDLER
			bool "Enable browse servers handler"
			default y if BROWSE_HANDLER
			depends on BROWSE_HANDLER
		config PHOTO_SLIDESHOW_NO_RESUME_PLAYING_WITH_PREV_NEXT
			bool "Dont resume to playing at pause state with prev / next function only for photo slideshow."
			default y
			depends on BROWSE_HANDLER
			help
				Dont resume to playing at pause state with prev / next function only for photo slideshow.
		config PLAYLIST_SUPPORT_WHOLE_PLAY_IN_CASII
			bool "Support play the whole entry"
			default n
			depends on (BROWSE_HANDLER && CASII)
			help
				Support completely play the whole genre / folder / artist.
		config PLAYLIST_SHUFFLE_LIMITED
			bool "In shuffle mode, the shuffle will be limited in self ~ self + 100."
			default y
			depends on BROWSE_HANDLER
			help
				Do shuffle between self ~ self+100.
				EX:
					1000 items.
					Without this option, the playlist map in the worse case will be:
						0 999 666 777 333 222 111 .....
					With this option, the playlist map in the worse case will be:
						0 101 4 103 50 151 ....
		config FILEOP
			bool "Enable file operation: Copy/Move/Delete "
			default y if PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV || PRODUCT_EXT_LMP555
			default n
			depends on (USE_SERVER_HANDLER && BROWSE_HANDLER)
			help
				We currently support file operations :
					Local : Delete
					Local -> Local :  Copy/Move
					Remote : Copy
				For local, it will copy/move/delete all files recursively (including hidden files)
				For remote, we only copy browsed files/folders
		config BROWSE_DO_FILEOP
			bool "Enable file operation in browse page "
			default n
			depends on (FILEOP)
			help
				It enables use fileop operations on selected item in browse page
		config BROWSE_DO_FILEOP_SUPPORT_COPY_MOVE_DELETE_OPTION
			bool "Support fileop with copy/move/delete option"
			depends on BROWSE_DO_FILEOP
			default n
			help
				It enables use fileop operations (copy/move/delete) on selected item in browse page
		config BROWSE_DO_FILEOP_SUPPORT_FACEBOOK_UPLOAD_OPTION
			bool "Support fileop with facebook upload" 
			depends on BROWSE_DO_FILEOP && DMA_FACEBOOK
			default n
			help
				It enables use fileop operations (facebook upload) on selected item in browse page
		config SUPPORT_AUTO_MOVE_WITH_PLAYLIST
			bool "Enable browse move with playlist"
			default y if PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			depends on BROWSE_HANDLER
			help
				Enable this will make browse page change at reshow by last playlist item index.
		config RUA_MEMORY_ALLOC_BANK1_FIRST
			bool "RUA Malloc from bank 1 first"
			default y if PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_IMEDIA_HD100 || PRODUCT_EXT_FUNTWIST || PRODUCT_EXT_EM7075
			default n
			depends on PLATFORM_SMP8634 || PLATFORM_SMP8654
			help
				For rua malloc in em86xx_device.c
				If you enable this configuration, the rua malloc will try to alloc from bank 1 then bank 0.
				Otherwise, the rua malloc will try to alloc from bank 0 then bank 1.
		config QUICK_START_MODE
			bool "Set this option to on it allows you to select one of both modes to shutdown your device"
			default y if PRODUCT_EXT_LMP555
			help
				If you enable this configuration,you will can select anyone of both modes to shutdown device in settings option.
		config POWER_ON_OFF_WITH_ETHERNET_UP_DOWN
			bool "Turn power on or off with ethernet up or down"
			default n
			depends on PLATFORM_SMP8634 || PLATFORM_SMP8654 || PLATFORM_SMP8670
			help
				If you enable this configuration, when you turn power on or off ,the ethernet function up or down.
		config DELETE_OUT_OF_DATA_FIRMWARE_IN_USB
                        bool "Delete out of date firmware in the usb drive"
                        default n
                        default y if PRODUCT_EXT_AV_LS700L
                        depends on PLATFORM_SMP8634 || PLATFORM_SMP8654
                        help
                                If you enable this configuration, the firmware in you USB drive which is out of date will be removed.
		config SAVE_DEFAULT_SETTING_IN_LAST_PARTITON
			bool "Save default setting in last partition"
			default y if PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_WDTV_RV
			default n
			depends on PLATFORM_SMP8654 || PLATFORM_SMP8670
			help
				If you enable this configuration, we save the static NTSC/PAL and Language setting in last partition.
				This setting will be read if setting partition is blank or factory default.
		config LAST_PARTITION_NODE_NAME
			string "last partition node name"
			default "/dev/sigmblockl"
			depends on SAVE_DEFAULT_SETTING_IN_LAST_PARTITON
			help
				Please enter the device node name of last partition.
		config STATIC_CONFIG_MOUNT_POINT
			string "Mount point of static config partition"
			default "/tmp/static_config"
			depends on SAVE_DEFAULT_SETTING_IN_LAST_PARTITON
			help
				Please enter the mount point of last partition
		config SUPPORT_SYSTEM_ACCOUNT
			bool "Support to add/delete system account"
			depends on PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			default y
			help
				If you want to support to add/delete system account from /etc/password or /etc/shadow, please enable this option.
		config SUPPORT_DEEP_SLEEP_MODE
			bool "support deep sleep mode"
			default n
			depends on PLATFORM_SMP8654 || PLATFORM_SMP8670
			help
				This config is only used in PLATFORM_SMP8654/PLATFORM_SMP8670 to support deep sleep mode.
		config DEBOUNCE_NTSC_PAL_KEY_TIME 
			int "Set a time to avoid NTSC/PAL switch key repeat too fast"
			default 10
			help	
				Switching NTSC/PAL need several seconds. We can set a time to avoid repeating key too fast.

		config THERMAL_SENSOR_SUPPORT
			bool "Support thermal sensor"
			default y if PRODUCT_EXT_LMP555
			default n
			help
				Support thermal sensor. It can report current temperature and starts/stops FAN.	
	
		config THERMAL_HIGH_TEMPERATURE
			int "High temperature threshold (Centigrade)"
			depends on THERMAL_SENSOR_SUPPORT
			default 65
			help
				The fan starts if the temperature higher than this

		config THERMAL_LOW_TEMPERATURE
			int "Lower temperature threshold (Centigrade)"
			depends on THERMAL_SENSOR_SUPPORT
			default 50
			help
				The fan stops if the temperature lower than this

		config LACIE_MEDIAPLAYER_SATA_CLOCK_CORRECTION
			bool "Lacie media player SATA clock correction"
			depends on (PLATFORM_SMP8654 || PLATFORM_SMP8670) && MOUNT_LOCAL_SATA_DRIVE && PRODUCT_EXT_LMP555  
			default n
			help
				This is a workaround for Lacie mediaplayer board
				Phase I hardware : external SATA clock(zboot: a.sata_channel_cfg = 0x0007), no power control microP, no thermal and fan ,  no DTS
				Phase II hardware : internal SATA clock(zboot: a.sata_channel_cfg = 0x8057), having power control microP, thermal, fan and DTS
				Because we want to use the same firmware (including bootloader) for phase I and phase II firmware, thus, we have to detect phaseI and II runtime,
				and fix up the a.sata_channel_cfg in bootloader. 
				The rule is : if thermal exist and it is external SATA clock, we'll change it to internal SATA clock. 

		config RTC_TOOL
			bool "Add support for configuring rtc"
			default n
			help
				Enable this config will compile an application for configure rtc.

		config MLS_PRESET
			bool "Audio preset support"
			default n
			depends on BROWSE_HANDLER 
			help
				Preset : 
					Which defines shortcuts to audio media objects in slots. 
					Audio item / folder / playlist only.
					Online audio allowed
					It allows empty slots which no media object hooks, but no need to reorder.
				
		config MLS_FAVORITE
			bool "Create Favorite(shortcut) to file or folder" 
			default y if PRODUCT_EXT_LMP555
			depends on BROWSE_HANDLER 
			help
				Favorites : 
					Which contains shortcuts for media objects. 
					All categories are allowed including audio/video/photo 
					Item ,playlist ,folder are all allowed
					Online items are allowed
					The order can be defined. It can be sorted by favorite order

		config MLS_PLAYQUEUE
			bool "Editible playlist for WD"
			default n
			depends on BROWSE_HANDLER
			help
				Editable Playlist :
					Which are lists for media objects shortcuts. 
					All categories are allowed including audio/video/photo 
					Items only. Container shouldn't be allowed
					The order can be defined. It can be sorted by favorite order

		config MLS
			bool
			default y if MLS_PRESET || MLS_FAVORITE || MLS_PLAYQUEUE
			help
				This is a media object access layer. It can save preset, favorite(shortcuts), playqueue.

		choice 
			prompt "Please select the storage devices to store presets/favorites/editable playlist"
			depends on MLS
			default MLS_STORE_TO_CONFIG_PARTITION
			config MLS_STORE_TO_CONFIG_PARTITION
				bool "save to config partion"
			config MLS_STORE_ON_USB0
				depends on 0
				bool "save presets/favorites/editable playlist on USB0"
			config MLS_STORE_ON_USB1
				depends on 0
				bool "save presets/favorites/editable playlist on USB1"
			config MLS_STORE_ON_SATA
				depends on 0
				bool "save presets/favorites/editable playlist on SATA"
		endchoice
		config SUPPORT_MEMORY_COMPRESSION
                        bool "Support in-memory compression using compcache module"
                        default n
                        help
				***** TO BE ABLE USE THIS FEATURE, YOU MUST OPEN CONFIG_LZO in LINUX KERNEL CONFIGURATION, OTHERWISE THIS MODULE WON'T WORK *****
				This module creates RAM based block device (named ramzswap) which acts as swap disk. Pages swapped to this disk are compressed and stored in memory itself.
				Compressing pages and keeping them in RAM virtually increases its capacity. This allows more applications to fit in given amount of memory. 
				If you're unsure, select N
		config SUPPORT_MEMORY_COMPRESSION_RUNTIME_CONTROL
			depends on SUPPORT_MEMORY_COMPRESSION
                        bool "Support runtime control at system setting to enable/disable memory compression"
                        default n
                        help
				Open this option will enable control to disable/enable memory compression (compcache) at system setting.
				This option is used to DEBUG only, it should not be open for customer. If you're unsure, select N

	endmenu
	menu "Video Output Configuration"
		config NTSC_OR_PAL
			string "Set analogue television systems"
			default	"NTSC"
		choice 
			prompt "NTSC Video Output Configuration"
			default NTSC_M_Japan if PRODUCT_EXT_AV_LS700L 
			default NTSC_M
			config NTSC_M
				bool "NTSC-M"
				help
					NTSC_M: Most common standard.
			config NTSC_M_Japan
				bool "NTSC-J"
				help
					NTSC_M_Japan: Used in Japan only.
					  			  The same as NTSC_M, except there is no blanking pedestal 
								  during active video. 
		endchoice
		config ENABLE_ALL_DIGITAL_ANALOG_OUTPUT
			bool "Enable all video output(composite, component & HDMI)"
			default y if PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help
				Enable composite, component and HDMI output at the same time.
		config COMPONENT_SUPPORT_RGB_COLOR_SPACE
			bool "component output support RGB color space"
			default n
			help
				To enable RGB color space in Component output
		config SUPPORT_COMPONENT_OUTPUT_IN_TVDOCK
			bool "support component output"
			default y if PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help
				To enable component setting and output.
				There no oem page, so I have to use this name.
				It just work around
		config HDMI_REPLACE_PREFERRED_MODE_TO_1080P
			bool "Using -r 1080p to replace -r pref"
			default y
			depends on PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			help
				Using force 1080p to replace preferred mode.
				Fix preferred mode will select wrong resolution. 
		config HDMI_USING_1080P23
			bool "HDMI support 1080P 23.976Hz"
			default n
			help
				This feature will enable 1080P 23.976Hz.
		config HDCP_ALWAYS_ON
			bool "HDMI alwasy turn on HDCP"
			default n
			depends on PRODUCT_EXT_WDTV_RV
			help
				This feature will always turn on HDCP in HDMI output.
		config GET_HDMI_VIC
			bool "save HDMI VIC list to file"
			default n
			depends on PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help
				This feature will save current HDMI EDID data and VIC to file.
		config HDMI_AUTO_NATIVE_MODE
			bool "auto change HDMI output frame rate to match video's frame rate"
			default n
			depends on PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help
				This feature will change current HDMI output frame rate to meet your video's frame rate.
				It will find best match of the framerate if your TV didn't support this video's frame rate.
		config HDMI_SAVE_TV_MODEL
			bool "save current HDMI TV's model(deep color and hdmi force mode  will need this.)"
			default y
			depends on PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_ALPHA || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			help
				Deep color and HDMI force output need to detect TV model.
				If TV changed, then we should fall back to default setting.
		config HDMI_COMPATIBLE_MODE
			bool "add HDMI compatible mode in AV setting page to select deep color mode"
			default y
			depends on HDMI_SAVE_TV_MODEL
			help
				add HDMI compatible mode in AV setting page.
				HDMI use 8bit deep color, if this turn on.
				Otherwise will auto negotiate with TV.
		config HDMI_FORCE_OUTPUT_UNSUPPORTED_RESOLUTION
			bool "force HDMI to output a unsupported output"
			default n
			depends on HDMI_SAVE_TV_MODEL
			help
				Most of the DVI monitor didn't have enough information to told you what resolution they can support.
				So we add force output mode for user to try it.
		config FIX_HDMI_NO_SYNC
			bool "Fix HDMI chip fail to output on certain TV"
			default y
			depends on PLATFORM_SMP8654_SDK_3_8_5_WD0 
			help
				This patch is from Sigma FAE "Yanquan".
				It use to fix HDMI not sync in certain TV.
		config FIX_TMDS_OFF_DELAY
			bool "fix 12bit color depth noise in DFB"
			default y if PLATFORM_SMP8654_SDK_3_8_4 
			depends on HDMI_COMPATIBLE_MODE && PLATFORM_SMP8654_SDK_3_8_4
			help
				TMDS should turn off when changing color depth.
		config HDMI_HOTPLUG_ALWAYS_ON
			bool "HDMI hotplug set to always on"
			default n
			help
				HDMI hotplug set to always on
		config SUPPORT_10_BIT_DEEP_COLOR
			bool "support 10 bit deep color"
			default n
			depends on HDMI_COMPATIBLE_MODE 
			help
				add 10 bit deep color for HDMI.
		config FORCE_HDMI_8_BIT_DEEP_COLOR
			bool "force HDMI output 8 bit deep color"
			depends on !HDMI_COMPATIBLE_MODE
			default y if PRODUCT_EXT_LMP555 || PRODUCT_EXT_WDTV_VILLA
			default n
			help
				force HDMI output 8 bit deep color.
		config HDMI_SUPPORT_CEC
			bool "Open HDMI CEC Feature"
			default n
			depends on PLATFORM_SMP8654_SDK_3_8_8
			help
			Open HDMI CEC Feature
		config HDMI_APPLY_DISPLAY_OPTION_WITHOUT_CLOSE_HDMI_CHIP
			bool "Never close HDMI chip when apply display option or Power off"
			default n
			depends on PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			help
				Follow Rex's suggestion to  avoid some bugs.
		config HDMI_LOCK_FUNCTION
			bool "add hdmi lock function to avoid GFX and display conflict"
			default y
			help
				add hdmi lock function to avoid GFX and display conflict.
				GFX and display can't set property at the same time.
				It will cause display pending.
		config IMPROVE_COMPOSITE_QUALITY
			bool "improve composite quality when HD->SD converter is enable"
			default n
			help
				The composite quality will become worse when when HD->SD converter is enable.
				But the quality can be improved by "-sdbuf".
				"-sdbuf" will require some memory buffer and CPU usage.
		config APPLY_DISPLAY_IF_ASPECT_RATIO_CHANGED
			bool "Re-apply display output if aspect ratio changed"
			default y
			depends on SUPPORT_COMPONENT_OUTPUT_IN_TVDOCK 
			help
				We have to enable this if we use "-sdf" to eanble HD->SD converter.
				Composite's aspect ration will incorrectly in particular movie if we change aspect ratio withou apply display output.
	endmenu
	menu "Remote controller"
		choice
			prompt "Remote controller driver"
			config IRDA_TANGO3_SIMPLE
				bool "Use Tango 3 simple driver"
				depends on (PLATFORM_SMP8634 || PLATFORM_SMP8654 || PLATFORM_SMP8670)
				depends on !DIRECTFB
			config IRDA_DFB_EVENT
				bool "Use DirectFB event driver"
				depends on DIRECTFB
				help
					DFB will send event when you get input from irda, keyboard and mouse.
					dmaosd will read evnet and convert to osd key.
		endchoice
		config IRDA_KEY_TIMING
			int "Set the IrDA key read timing (Unit: ms )"
			default 300 if (PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV)
			default 200
			depends on IRDA_TANGO3_SIMPLE
			help
				Customize the irda key getting timing. Shorter timing may cause OSD act faster. 
				However, for some remote controllers (Logictech universal or Sony), shorter timing may cause reading 2 keys when press once.
				Currently only WD request for special remote controllers. So we set it to longer timing
		config REMOTE_WDTV 
			bool "WD remote support"
			default y if PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			default n
		config REMOTE_ADM500
			bool "ADM500 remote support"
			default n
		config REMOTE_ADM534H
			bool "ADM534H remote support"
			default n
		config REMOTE_DSM520_IN_TANGO3
			bool "DSM520 remote support"
			default y
		config REMOTE_AV_LS700L
			bool "AV_LS700L  remote support"
			default y if PRODUCT_EXT_AV_LS700L
			default n
		config REMOTE_IMEDIA_HD100
			bool "IMEDIA_HD100  remote support"
			default y if PRODUCT_EXT_IMEDIA_HD100
			default n
		config REMOTE_IMEDIA_HD100_V2
			bool "IMEDIA_HD100_V2 remote support"
			default y if PRODUCT_EXT_IMEDIA_HD100
			default n
		config REMOTE_FUNTWIST
			bool "FUNTWIST  remote support"
			default y if PRODUCT_EXT_FUNTWIST
			default n
		config REMOTE_LMP555
			bool "Lacie LMP555 remote support"
			default y if PRODUCT_EXT_LMP555
			default n
		config REMOTE_EM7075
			bool "EM7075  remote support"
			default y if PRODUCT_EXT_EM7075
			default n
		config  IRDA_LED_BLINKING
			bool "IrDA LED Blinking"
			default y if PRODUCT_EXT_LMP555
		config  IRDA_NO_DIRECTION_HOLDKEY
			bool "No holding key for up/down/left/right"
			default y if PRODUCT_EXT_WDTV_RV
			default n
			depends on IRDA_TANGO3_SIMPLE || IRDA_DFB_EVENT
		config  IRDA_NO_DIRECTION_HOLDKEY
			bool "No holding key for up/down/left/right"
			default y if PRODUCT_EXT_WDTV_RV
			default n
			depends on IRDA_TANGO3_SIMPLE || IRDA_DFB_EVENT
	endmenu
	menu "Storage features"
		config USB_HUB_SUPPORT
			bool "To support USB hub"
			default n
			depends on PRODUCT_EXT_WDTV_RV 
		config SKIP_4K_SECTOR_AND_LARGER_THAN_2T
			bool "Do not support drive larger than 2T with 4K sector"
			default n
			depends on PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV 
			help
				The kernel we used are too old to support drive larger than 2T with 4k sector. 
				So we try to block it out.
				Currently, 2011/03/07, Sigma has released patches for it and it seems to be good.
				So I try to disable this.
			
		config WD_APOLLO_DRIVE_UNLOCK_SUPPORT
			bool "WD Apollo drive unlock support"
			default y
			depends on PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV 
		config STORAGE_SUPPORT
			bool "Storage support"
			default y

		config REMOVABLE_DEVICE_MANAGER
			bool 
			default y
			depends on STORAGE_SUPPORT

		comment "Filesystem support"
		config FUSE_MOUNT_SUPPORT
			bool "Fuse mount support, increase DVD file performance."
			depends on PTP_SUPPORT
			default y
			help
				the performance is bad when DVD Navigtion play the dvd file from samba server.
				So we use fuse to mount the virtual folder. it will force read 64K from samba server. otherwise it only read 2K.
		config NTFS_SUPPORT
			bool "NTFS support"
			default y
			depends on STORAGE_SUPPORT
		config PARAGON_NTFS_HFS_SUPPORT
			bool "Paragon NTFS & HFS+ support"
			default n
			depends on (PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA  || PRODUCT_EXT_WDTV_RV) && !BUILD_GPL_FIRMWARE
		config NTFS_DOUBLE_MOUNT
			bool "Mount NTFS twice to speed up reading"
			default y if PRODUCT_EXT_WDTV_HOUSE
			depends on NTFS_SUPPORT && PRODUCT_EXT_WDTV_HOUSE 
			help 
				In EM8634, the storages are connected via USB and the performance of USB is poor. For media
				library, we have to both read and write on a NTFS partition. If we just read from NTFS using
				NTFS-3G, some full-HD video won't be played smoothly. So we just mount a NTFS partition twice.
				One with gereric NTFS driver for reading and another is NTFS-3G for writing. 

				In EM8654, the CPU performance and USB performance is better than EM8634, so we don't have to
				mount a NTFS partition twice and we just have to read and write from a NTFS partition using 
				NTFS-3G.
		config NTFS_3G_SUPPORT
			bool "NTFS-3G support"
			default y
			depends on NTFS_SUPPORT && !PARAGON_NTFS_HFS_SUPPORT  
		config NTFS_3G_COMMERCIAL_SUPPORT
			bool "NTFS-3G commercial version support"
			default n
			depends on NTFS_3G_SUPPORT && ( PRODUCT_EXT_LMP555 || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_RV)
		config NTFS_3G_COMMERCIAL_SUPPORT_IOSTREAMING
			bool "Use iostreaming mode"
			default n
			depends on NTFS_3G_COMMERCIAL_SUPPORT
		config TNTFS_HFS_SUPPORT
			bool "Tuxera NTFS & HFS+ support"
			default y if PRODUCT_EXT_LMP555
			depends on NTFS_3G_COMMERCIAL_SUPPORT
		config PARAGON_NTFS_SUPPORT
			bool "Paragon NTFS support"
			default y if PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_RV 
			depends on NTFS_SUPPORT && !BUILD_GPL_FIRMWARE
		config NTFSPROGS_SUPPORT
			bool "mkfs for NTFS support"
			default y if PRODUCT_EXT_LMP555
			depends on NTFS_SUPPORT
		config FAT_SUPPORT	
			bool "FAT support"
			default y
			depends on STORAGE_SUPPORT
		config DOSFSTOOLS
			bool "filesystem check for VFAT"
			default y
			depends on FAT_SUPPORT 
		config HFS_SUPPORT	
			bool "HFS support"
			default y
			depends on STORAGE_SUPPORT
		config PARAGON_HFS_FSCK_SUPPORT
			bool "Paragon HFS fsck support"
			default y
			depends on PARAGON_NTFS_HFS_SUPPORT && HFS_SUPPORT
		config HFS_FSCK_SUPPORT
			bool "Opensource HFS fsck support"
			default n
			depends on HFS_SUPPORT 
		config HFS_MKFS_SUPPORT
			bool "mkfs for HFS support"
			default y
			depends on HFS_SUPPORT
		config EXT2_SUPPORT	
			bool "ext2 support"
			default y
			depends on STORAGE_SUPPORT
		config EXT3_SUPPORT	
			bool "ext3 support"
			default y
			depends on STORAGE_SUPPORT
		config XFS_SUPPORT
			bool "xfs support"
			default y
			depends on STORAGE_SUPPORT

		comment "Interfaces for storages"

		config MOUNT_LOCAL_SATA_DRIVE
			bool "Local SATA drive support"
			default y
			depends on (PLATFORM_SMP8654 || PLATFORM_SMP8670) && STORAGE_SUPPORT
		config ENSLAVE_LOCAL_SATA_DRIVE
			bool "Enslave local SATA drive through JMICRO" 
			default y
			depends on MOUNT_LOCAL_SATA_DRIVE && PRODUCT_EXT_LMP555
		config USE_SD_SDK_3_6_1_RC2_SATA_DRIVER
			bool "Using Sigma Designs SDK 3.6.1RC2 SATA driver"
			depends on PLATFORM_SMP8654 && STORAGE_SUPPORT && MOUNT_LOCAL_SATA_DRIVE
			help
				Sigma Designs SDK 3.7.0 default SATA driver is unstable. Enalbe this to use Sigma Designs 3.6.1RC2 SATA dirver, because this version is stable currently.

		config SINGLE_USB_MOUNT
			bool "Only one USB slot"
			default y if PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_IMEDIA_HD100 || PRODUCT_EXT_FUNTWIST || PRODUCT_EXT_EM7075
			depends on STORAGE_SUPPORT

		comment "Mount path settings"

		config USB_MNT_ROOT
			string "usb mount path"
			default "/tmp/media/usb"
			depends on STORAGE_SUPPORT  

		config MNT_POINT_FOR_SATA
			string "mount point for SATA drive"
			default "Local"
		config EXPORT_STORAGE_MNT_POINT
			string "usb export root"
			default "/tmp/media/export"
			depends on STORAGE_SUPPORT 
			help
				When server is enable, we must assign content-path to let user browse them. Originally, I
				export USB_MNT_ROOT(/tmp/media/usb) path but customers give us a response that they doens't
				want to see USB1/volume_id because user dones't know what is this. So, we export original
				USB_MNT_ROOT(/tmp/media/usb) path to EXPORT_STORAGE_MNT_POINT(/tmp/media/export) and mount as
				USB1/volume_name not USB1/volume_id. Why do we mount volume_name first? Because CAS will use
				volume_id as key (???)
			
		config USB_MNT_POINT_FOR_PORT1
			string "mount point for USB port 1"
			default "USB1"
			depends on STORAGE_SUPPORT 

		config USB_MNT_POINT_FOR_PORT2
			string "mount point for USB port 2"
			default "USB2"
			depends on STORAGE_SUPPORT 

		config USB_MNT_POINT_FOR_PORT
			string "mount point for USB port unknown"
			default "USB"
			depends on STORAGE_SUPPORT 

		comment "Additional features for storages"

		config RV_WITHOUT_LABEL_AND_NTFS_CHECKING 
			bool "Don't check RV HDD's Lable AND Serial No."
			depends on STORAGE_SUPPORT && PRODUCT_EXT_WDTV_RV 
			default n
			help
				If enable this option, RV will check HDD's label and serial number.

		config SUPPORT_STORAGE_DISK_MANAGER
			bool "Support storage disk manager"
			depends on STORAGE_SUPPORT
			default y if PRODUCT_EXT_WDTV_RV 
			help
				If enable this option, user could browse disk information from setting/Disk manager.

		config SATA_STORAGE_STANDBY_SUPPORT
			bool "SATA standby timer support"
			depends on MOUNT_LOCAL_SATA_DRIVE
			default y
			help
				Use SATA command (from hdparm) to set SATA drive going to standby mode automatically

		config SATA_STANDBY_TIMER_IN_NORMAL_MODE
			int "SATA standy timer in normal mode"
			depends on SATA_STORAGE_STANDBY_SUPPORT
			default 240
			help
				Set the standby timer in normal mode.(For this parameter, please "man hdparm")
		
		config SATA_STANDBY_TIMER_IN_STANDBY_MODE
			int "SATA standy timer in standby mode"
			depends on SATA_STORAGE_STANDBY_SUPPORT
			default 12
			help
				Set the standby timer in standby (video off) mode.(For this parameter, please "man hdparm")

		config DBG_INFO_ON_USB
			bool "Save debug info on USB (EDIE, crash log, etc)"
			default y
			depends on REMOVABLE_DEVICE_MANAGER && ( PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV) 

		config REMOVABLE_DEVICE_MANAGER_VIRTUAL_FOLDER_FOR_LOCAL_BROWSE
			bool "Virtual folder support"
			default y
			depends on REMOVABLE_DEVICE_MANAGER

		choice
			prompt "Mode to build virtual folder"
			config REMOVABLE_DEVICE_MANAGER_VF_INODE
				bool "Build real virtual folder with creating INode"
				help
					This will create virtual folder tree in /tmp which maps to storage folder tree.
					This is 1st version virtual which used before Sigma 3.7 SDK.
					However, in Sigma 3.7 SDK, the kernel page is 16KB, thus, the /tmp may run out of Inode when we have to create thousands of real folder.
			config REMOVABLE_DEVICE_MANAGER_VF_LINKLIST
				bool "Build virtual folder link list (not creating INode)"
				help
					This will create link list instead of create real virtual folder.
					This mode is to fix the out of INode problem.
		endchoice

		config REMOVABLE_DEVICE_MANAGER_VF_SUPPORT_INOTIFY
			bool "Virtual support inotify event notfication"
			default n
			depends on REMOVABLE_DEVICE_MANAGER_VF_LINKLIST
			help
				inotify can monitor filesystem changes.
				The mounted storage may changes by UI or samba copy/move/remove  files and dirs.
				We use this function to notify virtual folder thread to synchronize with files/dirs changes. 
		
			config REMOVABLE_DEVICE_MANAGER_VF_INOTIFY_REFRESH_DELAY
				depends on REMOVABLE_DEVICE_MANAGER_VF_SUPPORT_INOTIFY
				int "The refreshing time after all inotify events are gotten"
				default 30
				help
					We may receives lot of continuous changes  in a short time interval because lots of files are copied.
					Thus, we should need to set a time which defines the refresh will begin after how many seconds delay.

		config REMOVABLE_DEVICE_MANAGER_VIRTUAL_FOLDER_FOR_LOCAL_BROWSE_PATH
			string "Virtual folder path"
			default "/tmp/virtual_folder"
			depends on REMOVABLE_DEVICE_MANAGER_VF_INODE

		config STOP_USB_HDD
			bool "Stop HDD from spinning"
			default y
			depends on STORAGE_SUPPORT
		config ONE_DEVICE_FOR_EACH_USB_PORT
			bool "Mount only one HDD for one USB port"
			default y
			depends on STORAGE_SUPPORT
		config CAS
			bool "Media library support"
			default y
			depends on STORAGE_SUPPORT
		choice
			prompt "CAS for SATA/USB drive"
			depends on CAS && (MOUNT_LOCAL_SATA_DRIVE)
			default CAS_FOR_SATA_USB if PRODUCT_EXT_LMP555
			default CAS_FOR_SATA_USB_NO_DEFINE if PRODUCT_EXT_UNO 

			config CAS_FOR_INTERNAL_SATA_ONLY
				bool "CAS for internal SATA drive only"

			config CAS_FOR_SATA_USB
				bool "CAS for SATA or USB drive"

			config CAS_FOR_SATA_USB_NO_DEFINE
				bool "CAS for SATA or USB drive fixed compiling error"
				help
					enable CAS_FOR_SATA_USB may encounter some compiling errors, choose this config if you have errors.
				
		endchoice
		config CASII
			bool "Using db manager (CASII)."
			depends on CAS
			default n
			help
				Enable this option to use db manager.
		choice
			prompt "CAS server created method"
			depends on CASII
			default SINGLE_CAS_SERVER
			config SINGLE_CAS_SERVER
				bool "Only creating one server on server handler for every db."
				help
					This method is designed for auto-selecting db. For example.
					In old product like WDTV, the ui dont have data source option.
					So we need a method to let page refresh if the db is updated.
					And this method is designed for that.					

			config NORMAL_CAS_SERVER
				bool "Creating one server on server handler for every db. "
				help
					This method is nothing specially. Every db created will add a server on server handler.
					You can display all db by serever handler, and let user select it.

		endchoice
		choice
			prompt "CAS db position"
			depends on CASII
			default CREATE_DB_ON_USB_DEVICE
			default CREATE_DB_ON_LOCAL_DEVICE if (PRODUCT_EXT_WDTV_RV && MOUNT_LOCAL_SATA_DRIVE)
			config CREATE_DB_ON_USB_DEVICE
				bool "create db on usb "
				help 
					Like wdtv / villa / lacia, we create db for all storage,
					and save it on each device.  
			config CREATE_DB_ON_LOCAL_DEVICE
				bool "create db on sata storage "
				help
					Like RV, we create db for all storage,
					and save them all on sata device.
		endchoice
		config	CASII_PARENTAL_CONTROL
			bool "Enable/disable parental contol function on casii db."
			depends on CASII
			default n
				help
					With this option, the setup / system page will provide lock / unlock query
					and set parental lock password.
		config	CASII_PARENTAL_CONTROL_DEFAULT_PASSWD
			string "parental control default password"
			default "0000" if CASII_PARENTAL_CONTROL
			default ""
		config	CASII_SUPPORT_DB_MANAGER
			bool "Enable db manager system."
			depends on CASII
			default n
				help
					Add manager system for db manully / schedule scan and aggregate samba db.
		config	CASII_DEBUG_WITH_STATIC_PATH_ON_DB
			bool "Easy to create db on x86 env."
			depends on CASII
			default n
				help
					With this option, the dbm will create an init db data.
					You dont need plug / unplug usn device on x86 env.
		config  DISABLE_PLAYLIST_HISTORY_WHEN_CAS_OFF
			bool "When CAS off, don't create playlist history on storage."
			default n
			depends on CAS 
			help
				Normally, regardlss of CAS is enabled or disabled, 
				device will create playlist history on stoarge.
				When this option turns on, the device only create playlist history on storage
				while CAS is enabled.
		config TVDOCK_DB_DIR
			string "DB directory"
			default "/.wd_tv/"
			depends on CAS
		config TVDOCK_DB_NAME
			string "DB name"
			default "wdtv.cas"
			depends on CAS
		config TVDOCK_UNION_DB_NAME
			string "Union DB name"
			default "uniondb.cas"
			depends on CAS
		config TVDOCK_DB_MD5
			string "MD5 sum extension"
			default ".md5"
			depends on CAS
		config TVDOCK_DUPLICATE_FILTER
			bool "Filter out duplicate file"
			default n
			depends on CAS
		config CAS_FOLDER_CRC
			bool "Folder CRC check for FAT"
			default y
			depends on CAS
		config CAS_TIMER_INTERVAL
			int "Content aggregation state checking interval (sec)"
			default 10
			depends on CAS
			help
				We need a timer to poll the virtual folder state. If it is dirty, we need to trigger CAS scan

		config REMOVABLE_DEVICE_BROWSE
			bool
			default y
			help
				Obselete and stupid setting. 
				This is just in order to make it able to compile
		config PTP_SUPPORT
			bool "support Picture Transfer Protocol"
			depends on PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			default y
			help
				Enable this to read Digital Camera like storage device
		config PTP_EXPORT_ONLY_IMAGE
			bool "export image only"
			depends on PTP_SUPPORT
			default y
			
		config GPHOTO2_IDLIST
			string "Path of supported camera list"
			default	"/etc/idlist"
			depends on PTP_SUPPORT
			help	
				This file contains all supported camera list. This file is alone with libgphoto2 in bsp_repos
		config FILE_CHECKR
			bool "File status cache for watched or something"
			depends on PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			default y
			help
				This option will create a chain node to cache the file status, something like "watched / resume pos"
		config POPEN_FIRMWARE_CHECKSUM
			bool "Using popen to do firmware md5 checksum"
			depends on PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			default y if PRODUCT_EXT_WDTV_RV
			help
				Using popen to replace block read to prevent system block during firmware md5 checksum.
	endmenu
	menu "Player features"
		menu "Subtitles"
			config SPU_API
				default y
				bool "Player subtitle support"
			config FONT_FILE_PATH_STORE
				string "Path to store font file"
				default "/tmp/font_file_path"
				depends on SPU_API
			config SUPPORT_HW_VOBSUB
				bool "Hardware support for VOBSUB"
				default n
				depends on PLATFORM_SMP8634 || PLATFORM_SMP8654 || PLATFORM_SMP8670 
			config  SUBTITLE_SELECT
		        bool "Subtitle select"
				default y
				depends on PRODUCT_EXT_LMP555
				help
				    Enable this to support select subtitle in playback.	
			config	SUBTITLE_POSITION_ADJUSTMENT
				bool "Subtitle positon adjustment"
				default	n
				help
					Enable this to support adjusting subtitle position in playback.
			config SUBTITLE_POSITION_ADJUSTMENT_DELTA
				int "the default value for subtitle position adjustment"
				default 5
				depends on SUBTITLE_POSITION_ADJUSTMENT
			config SUPPORT_MICRODVD_SUBTITLE
				bool "Support MicroDVD subtitle"
				default y
				depends on PRODUCT_EXT_WDTV_RV || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_LMP555
				help
					Enable this to support MicroDVD subtitle.
			config SUBTITLE_CHANGE_COLOR
				bool "Support to change subtitle color"
				default y
				depends on PRODUCT_EXT_WDTV_RV || PRODUCT_EXT_LMP555
				help
					Enable this to support to change subtitle color.
			config SUBTITLE_TEXT_COLOR
				bool "Support to change subtitle text color"
				default y
				depends on SUBTITLE_CHANGE_COLOR && PRODUCT_EXT_LMP555
				help
					Enable this to support to change subtitle text color.
			config SUBTITLE_CHANGE_FONT_SIZE
				bool "Support to change subtitle font size in playback"
				default y
				depends on PRODUCT_EXT_WDTV_RV
				help
					Enable this to support to change subtitle font size in playback"
		endmenu
		config  ONLINE_PLAYER_CACHE_SIZE
			int  "Player cache size for online service"
			default 63963136 
			help
				Player cache size for online services - Youtube, MediaFly, Facebook
		config  AUTO_AUDIO_OUTPUT_SETTING
			bool "AUDIO output follow HDMI EDID configuration"
			default n
			help
				add auto setting for HDMI audio passthrough.
				This option will read HDMI EDID configuration and pick up the best audio output.
		config AVI_SUPPORT_MULTIAUDIO_STREAM
			bool "AVI multi-audio stream support"
			default y
		config DMA_MLP_BOUNDED_WITH_RND
			bool "MLP bounded with RND (What the hell?)"
			default y
		config PROCPIPE_PLAYER
			bool "PROCPIPE player"
			default y
		config HW_BUFFERING
			bool "HW buffering support"
			default y
		config ISO_FOLDER_SUPPORTED
			bool "ISO folder support"
			default y
		menu "Audio Codec PassThrough Info"
			depends on !AUTO_AUDIO_OUTPUT_SETTING
			config DTS_DOWNMIX_COMPRESSED
				bool "downmix and passthrough at the same time for DTS family"
				default n
				help
					we can decode(dowmmix) and passthrough the DTS at the same time
			config DTS_2CH_ANALOG_COMPRESSED
				bool "DTS 2 channels analog compressed"
				default y
			config DTS_2CH_DIGITAL_COMPRESSED
				bool "DTS 2 channels digital compressed"
				default y
			config DTS_6CH_ANALOG_COMPRESSED
				bool "DTS 6 channels analog compressed"
				default y
			config DTS_6CH_DIGITAL_COMPRESSED
				bool "DTS 6 channels digital compressed"
				default y

			config DTS_HRA_2CH_ANALOG_COMPRESSED
				bool "DTS-HD High Resolution Audio, 2 channels analog compressed"
				default y
			config DTS_HRA_2CH_DIGITAL_COMPRESSED
				bool "DTS-HD High Resolution Audio, 2 channels digital compressed"
				default y
			config DTS_HRA_6CH_ANALOG_COMPRESSED
				bool "DTS-HD High Resolution Audio, 6 channels analog compressed"
				default y
			config DTS_HRA_6CH_DIGITAL_COMPRESSED
				bool "DTS-HD High Resolution Audio, 6 channels digital compressed"
				default y

			config DTS_MA_2CH_ANALOG_COMPRESSED
				bool "DTS-HD Master Audio, 2 channels analog compressed"
				default y
			config DTS_MA_2CH_DIGITAL_COMPRESSED
				bool "DTS-HD Master Audio, 2 channels digital compressed"
				default y
			config DTS_MA_6CH_ANALOG_COMPRESSED
				bool "DTS-HD Master Audio, 6 channels analog compressed"
				default y
			config DTS_MA_6CH_DIGITAL_COMPRESSED
				bool "DTS-HD Master Audio, 6 channels digital compressed"
				default y

			config DOLBY_LL_UNSUPPORTED
				bool "DOLBY LL unsupported"
				default y
				help
					yes => we will treat DOLBY lost-less as unsupported audio and won't play it
					no  => we can play DOLBY lost-less file
			config DOLBY_LL_2CH_ANALOG_COMPRESSED
				bool "DOLBY Digital TrueHD ,2 channels analog compressed"
				default y
			config DOLBY_LL_2CH_DIGITAL_COMPRESSED
				bool "DOLBY Digital TrueHD , 2 channels digital compressed"
				default y
			config DOLBY_LL_6CH_ANALOG_COMPRESSED
				bool "DOLBY Digital TrueHD , 6 channels analog compressed"
				default y
			config DOLBY_LL_6CH_DIGITAL_COMPRESSED
				bool "DOLBY Digital TrueHD , 6 channels digital compressed"
				default y

			config DOLBY_PLUS_2CH_ANALOG_COMPRESSED
				bool "DOLBY Digital plus,2 channels analog compressed"
				default y
			config DOLBY_PLUS_2CH_DIGITAL_COMPRESSED
				bool "DOLBY Digital plus,2 channels digital compressed"
				default y
			config DOLBY_PLUS_6CH_ANALOG_COMPRESSED
				bool "DOLBY Digital plus,6 channels analog compressed"
				default y
			config DOLBY_PLUS_6CH_DIGITAL_COMPRESSED
				bool "DOLBY Digital plus,6 channels digital compressed"
				default y

			config DOLBY_PLUS_ANALOG_COMPRESSED_SPDIF
				bool "passthrough DD+ via spdif when we decode it"
				depends on !DOLBY_PLUS_6CH_ANALOG_COMPRESSED || !DOLBY_PLUS_2CH_ANALOG_COMPRESSED || !DOLBY_PLUS_2CH_DIGITAL_COMPRESSED
				default n
				help
					we passthrough DD+ via spdif when we decode it on other output (analog and HDMI)
					on sigma chip. when we play pure DD+ stream. and we use this function .the DD+ iptoken is necessary
			config AC3_2CH_ANALOG_COMPRESSED
				bool "AC3 2 channels analog compressed"
				default y
			config AC3_2CH_DIGITAL_COMPRESSED
				bool "AC3 2 channels digital compressed"
				default y
			config AC3_6CH_ANALOG_COMPRESSED
				bool "AC3 6 channels analog compressed"
				default y
			config AC3_6CH_DIGITAL_COMPRESSED
				bool "AC3 6 channels digital compressed"
				default y

			config AAC_2CH_ANALOG_COMPRESSED
				bool "AAC 2 channels analog compressed"
				default y
			config AAC_2CH_DIGITAL_COMPRESSED
				bool "AAC 2 channels digital compressed"
				default y
			config AAC_6CH_ANALOG_COMPRESSED
				bool "AAC 6 channels analog compressed"
				default y
			config AAC_6CH_DIGITAL_COMPRESSED
				bool "AAC 6 channels digital compressed"
				default y

			config WMAPRO_UNSUPPORTED
				bool "WMAPRO unsupported"
				default y
				help
					yes => we will treat WMAPRO as unsupported audio and won't play it
					no  => we can play WMAPRO file
			config WMAPRO_2CH_ANALOG_COMPRESSED
				bool "WMAPRO 2 channels analog compressed"
				default y
				help
					yes => passthrough
					no  => decode
			config WMAPRO_2CH_DIGITAL_COMPRESSED
				bool "WMAPRO 2 channels digital compressed"
				default y
				help
					yes => passthrough
					no  => decode
			config WMAPRO_6CH_ANALOG_COMPRESSED
				bool "WMAPRO 6 channels analog compressed"
				default y
				help
					yes => passthrough
					no  => decode
			config WMAPRO_6CH_DIGITAL_COMPRESSED
				bool "WMAPRO 6 channels digital compressed"
				default y
				help
					yes => passthrough
					no  => decode

		endmenu
		menu "Audio Decoder Info"
			depends on AUTO_AUDIO_OUTPUT_SETTING
			config AC3_DECODER
				bool "HW AC3 decoder"
				default y
				help
					there is ac3 decoder on this platform
			config DDP_DECODER
