			default "http://www.google.com"
			depends on QWS_DEFAULT_HOMEPAGE


		config SUPPORT_PARENTAL_CONTROL
			bool "support parental control function"
			default y if PRODUCT_EXT_WDTV_RV
			help
				If you turn on this option, system will provide parental control function.
				You can set lock username/password through settings/system menu. while browsing and you want to lock folder, you can press menu key to lock it. if you want to unlock folder, you also pree menu key to unlock it.
		config SIGMA_OWB_BROWSER
			bool "OWB browser"
			default n
			help
				Enable this to support OWB browser.
	endmenu
	menu "UI features"
		menu "Alpha engine related"
			config OSD_ENGINE_DFB_DOUBLE_BUFFER
				bool "DirectFB uses Double Buffer ?"
				depends on DIRECTFB
				default y
				help
					For DirectFB, we use double buffer to switch between winMain and pixDrawSet
			config OSD_ENGINE_COMMON_PAGE 
				bool "Enable common page feature"
				default n
				help
					This feature makes each page object be automatically inhertiaged 
					by 'common page'. With this idea, developers can put some routines
					with this common page. 
					This is added by William Chen. Please consult with him if you find
					anything wrong.
				


			config OSD_ENGINE_STATIC_IMAGE_BUF_SIZE
				int "Static image buffer for engine"
				default 1572864
			config OSD_ENGINE_HTTP_IMAGE
				bool "Enable image widget to get image from HTTP"
				depends on ENABLE_NETWORKING
				default y
			config ENGINE_HAL
				bool "Use engine hal (This should be removed)"
				default y
			config BG_ON_OSD
				bool "Background on OSD"
				default y
			config OSD_IMG_CACHE_LARGE
				int "large image cache"
				default 3
			config OSD_IMG_CACHE_MEDIUM
				int "medium image cache"
				default 24
			config OSD_IMG_CACHE_SMALL
				int "small image cache"
				default 16
			config OSD_IMG_CACHE_LARGE_THRES
				int "large image cache threshold"
				default 345600
			config OSD_IMG_CACHE_MEDIUM_THRES
				int "medium image cache threshold"
				default 6400
			config MAX_THUMB_CATCH_SIZE
				int "maximum thumbnail cache size"
				default 3145728 
			config MAX_THUMB_CATCH_NUMBER
				int "maximum cached thumbnail number"
				default 10000
			config DRAW_OSD_TEXT_BY_ALE
				bool "Draw text by Arphic Layout Engine"
				depends on DIRECTFB
				default n if PRODUCT_EXT_WDTV_RV
				help
					In order to support Arabic and Hebrew, we need to Arphic Layou Engine to do this.
			config ALE_TEXT_CACHE_SIZE
				int "maximum cache size for drawn text pixmap"
				default 1048576
				depends on DRAW_OSD_TEXT_BY_ALE
			config PREFETCH_LIST_NUM
				int "The max number of records keep in prefetch list"
				default 60
		endmenu

		config THUMBNAIL_CACHE_ON_STORAGE
			bool "Cache thumbnails in their corresponding storage"
			default y
			depends on PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_RV
			help	
				This is just an ugly design. 
				We will try to keep the thumbnails in their corresponding storage 
				in order to save the transcoding time but it also increase the spare 
				space needed. 

				This will be removed after Ranbow finishes new media library. 
		config THUMBNAIL_CACHE_ON_STORAGE_FOLDER
			string "folder name to storage thumbnail cache"
			default "thumb"
			depends on THUMBNAIL_CACHE_ON_STORAGE
				
		config CAS_BROWSE_DATE_DESCEND
			bool "CAS browse sort by date with descendent"
			default n
			depends on CAS 
		config CAS_SEARCH_FILENAME_IN_AUDIO_AND_PLAYLIST
			bool "CAS search filename in both audio and playlist table."
			default n
			depends on CAS 
		config DMA_HD_UI
			bool "HD UI support"
			default y
		choice 
			prompt "Color depth"
			default DMA_DEPTH32
			config DMA_DEPTH8
				bool "8 bits"
			config DMA_DEPTH16
				bool "16 bits"
			config DMA_DEPTH24
				bool "24 bits"
			config DMA_DEPTH32
				bool "32 bits"
		endchoice
		config EJECT_USB_BY_NEW_CASE
			bool "eject USB by new mode"
			default y if PRODUCT_EXT_LMP555
			help
				This feature is requested by LaCie.
				Whatever unplugging USB device, we always show message to user to notice them to unplug USB safely.

		config THEME_ENABLED
			bool "theme setting support"
			default n
			help
				This feature permit user to change the theme.
				User can manage all theme which storage on USB or SATA drive,
				such as preview, set, delete etc., and user can also restore to default one.
				User can browse themes from online.		

		config THEME_SCREENSHOT
			string "default theme screenshot path"
			default "screenshot"
			depends on THEME_ENABLED

