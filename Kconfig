				bool "2.1.2.0"
				depends on !PLATFORM_SMP8654_SDK_2_6_29_17_ORIGINAL_KERNEL_PATCH
		endchoice

		config WPA_SUPPLICANT
			bool "Enable WPA Supplicant"
			default y if WIRELESS_AR9170
			depends on WIRELESS_SUPPORT
		config PROXY
			bool "Support proxy"
			default y if  PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			default n	
		config SUPPORT_NFS
                        bool "Support nfs client"
                        default n
                        depends on ENABLE_NETWORKING
                        help
                                If you want to "browse nfs server" funtion, please enable this option.
		config NFS_MOUNT_POINT
			string
			depends on SUPPORT_NFS
			default "/tmp/nfs"

		comment "samba client feature"
		config SAMBA
			bool "Enable samba browse"
			default y if (ENABLE_NETWORKING && BROWSE_HANDLER)
			depends on (ENABLE_NETWORKING && BROWSE_HANDLER)
		choice
			depends on SAMBA
			prompt "select samba package version"
			config SAMBA_VERSION_3_0_28A
				bool "3.0.28a"
			config SAMBA_VERSION_3_5_1
				bool "3.5.1"
			config SAMBA_VERSION_3_5_6
				bool "3.5.6"
			config SAMBA_VERSION_3_5_8
				bool "3.5.8"
		endchoice
		config SAMBA_VERSION
			string
			default "3.0.28a" if SAMBA_VERSION_3_0_28A
			default "3.5.1" if SAMBA_VERSION_3_5_1
			default "3.5.6" if SAMBA_VERSION_3_5_6
			default "3.5.8" if SAMBA_VERSION_3_5_8
		config SAMBA_PACKAGE_3_5_1_SUPPORT_3_0_28A_CLIENT
			bool "Samba package 3.5.1 supports to use 3.0.28a samba client"
			depends on SAMBA_VERSION_3_5_1
			default n
		config SAMBA_WORKGROUP
			bool "Support to modify samba workgroup"
			depends on SAMBA
			default y if PRODUCT_EXT_WDTV_RV
		config SAMBA_SUPPORT_ONLY_BROWSE_WORKGROUP_SERVERS
			bool "Support to only browse workgroup servers"
			depends on SAMBA_WORKGROUP
			default y if PRODUCT_EXT_WDTV_RV
			help
				This feature is let use only browse samba servers which are belong to your workgroup.
		config SAMBA_INSTALL_SMBCLIENT
			bool "Install smbclient"
			default y if PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_WDTV_RV
			default n
			depends on SAMBA
		config SAMBA_CONF_PATH
			depends on SAMBA
			string "samba conf path"
			default "/tmp/smb.conf"
		config SAMBA_MOUNT_POINT
			depends on SAMBA
			string "samba mount point"
			default "/tmp"
		config AUTO_LOGIN
			depends on SAMBA
			bool "[SAMBA FEATURE]Enable auto login"
			default y
			help
				This feature is only used for samba.
				If you enable this feature, system will use preset user-info or anonymous to login.
		config SAMBA_CLIENT_SUPPORT_AUTO_SERVERLIST_REFRESH
			depends on SAMBA
			bool "[SAMBA FEATURE]Enable samba server list refresh function automatically"
			default n
			help
				If you turn on this option, system will do serverlist-refresh action per 2 minutes at background.
		config SAMBA_CLIENT_SUPPORT_SERVERLIST_REFRESH
			depends on SAMBA
			bool "[SAMBA FEATURE]Enable samba server list refresh function manually"
			default y if PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help
				If you turn on this option, system will do serverlist-refresh action when enter browsing samba serverlist.
				Ex: [Villa] enter Video/Audio/Photo --> Network Shares --> do serverlist-refresh
		config CLEAR_USERACCOUNT
			depends on SAMBA
			bool "[SAMBA FEATURE]Enable clear useraccount"
			default y
			help
				This feature is only used for samba.
				If you enable this feature, you must select you want to "clear password only" or "clear
				all userinfo". The default option is "clear all userinfo"
		choice
			prompt "[SAMBA FEATURE]Select Option of Clearing Userinfo"
			depends on CLEAR_USERACCOUNT
			default CLEAR_ALL_USERINFO
			config CLEAR_ALL_USERINFO
				bool "clear all userinfo"
			config CLEAR_PASSWORD
				bool "clear password only"
		endchoice
		choice
			prompt "[SAMBA FEATURE]Select CIFS MOUNT PROPERTY"
			depends on SAMBA
			default SAMBA_CIFS_MOUNT_READ_ONLY
			config SAMBA_CIFS_MOUNT_READ_ONLY
				bool "samba mount with read-only"
			config SAMBA_CIFS_MOUNT_READ_WRITE
				bool "samba mount with read-write"
		endchoice
		config DEBUG_SMBTREE 
			depends on PLATFORM_X86 
			bool "Debug samba under x86. Press home key to reflash"
			default y
		config SUPPORT_NETWORK_SERVER_MOUNT
			depends on SAMBA
			bool "support network server mount"
			default y if SAMBA
			help
				If support samba or nfs client, you must enable this option to mount server.
		config UNO_SUPPORT_SAMBA_CLIENT_BROWSE
			depends on SAMBA && PRODUCT_EXT_UNO
			bool "[UNO for mp_test] support samba client browse"
			default n
			help
				[UNO: only for mp_test]
				If you enable this option, you can browse samba server by files entry.
		config SUPPORT_NETWORK_SYNC_DAEMON
			depends on ENABLE_NETWORKING && SAMBA
			bool "support network sync daemon"
			default y if SUPPORT_NETWORK_SYNC
			help
				1. Support	1) NETWORK_SYNC_DAEMON_TYPE_CHECK_MOUNT : try to mount samba-server
						2)NETWORK_SYNC_DAEMON_TYPE_SYNC_DATA : copy data from samba-server to local storage
				2. if you enable this option, please check SUPPORT_RSYNC is enable or not. if SUPPORT_RSYNC is disable, please enable it.
		config DMA_UPNP
			bool "UPNP support"
			default y
			depends on ENABLE_NETWORKING
		config DEVICE_MODEL_DESC
			string "device model description"
			depends on DMA_UPNP
