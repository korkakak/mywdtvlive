	menu "Platform features"
		config DMA_GPIO_API
			bool "GPIO API by Steven Wang"
			default y
		choice 
			prompt "LED control selection"
			default GPIO_LED_BLINKING if PLATFORM_SMP8654_WISTRON_VILLA_BOARD || PLATFORM_SMP8654_WISTRON_VILLA_BOARD_D2 || PLATFORM_SMP8654_WISTRON_BOARD
			default I2C_LED_BLINKING if PLATFORM_SMP8654_ALPHA_RV_BOARD || PLATFORM_SMP8654_ALPHA_RV_BOARD_256
			config GPIO_LED_BLINKING
				bool "Enable led gpio control in zboot"
			config I2C_LED_BLINKING
				bool "Enable i2c led control in zboot"
		endchoice
		config LED_GPIO_PIN
			int "GPIO pin of the led"
			depends on GPIO_LED_BLINKING
			default 2 if PLATFORM_SMP8654_WISTRON_VILLA_BOARD || PLATFORM_SMP8654_WISTRON_VILLA_BOARD_D2 || PLATFORM_SMP8654_WISTRON_BOARD
			
	endmenu

	menu "Debug features"
		config CONSOLE_SNIFFER
			bool "Sniffer all console outputs"
			default n if PRODUCT_EXT_WDTV_RV  
			help
				This is requested by WD. We have to log all the console output for engineers to debug.
				We need to patch kernel in order to create a 'console_peek' character device.
				This device is written by William Chen. So your kernel should have 'tty_io.c' patched.
				If it does, it creates 'console_peek' device and we can save all console log there.

		config DFB_SHOW_CONFIG
			bool "Show Video/Audio config information"
			default n
			depends on SUPPORT_DCCHD
			help
				Show Video/Audio config detail information.
		config DEBUG_SECRET_TELNETD
			bool "telnetd enabled by secret keys combination"
			default y
			help
				combination: right/right/down/down/right/right/down 
		config DMALLOC_DEBUG
			bool "Use dmalloc to debug"
			default n
		config DMALLOC_DEBUG_APPLY_DMAOSD
			depends on DMALLOC_DEBUG
			bool "Apply on dmaosd"
			default n
		config DMALLOC_DEBUG_APPLY_MEDIALOGIC
			depends on DMALLOC_DEBUG
			bool "Apply on MediaLogic"

		config DMALLOC_DEBUG_APPLY_DB_MANAGER
			depends on DMALLOC_DEBUG
			bool "Apply on db_manager"
		
	
		config DMALLOC_MASK_LOG_STATUS
			depends on DMALLOC_DEBUG
			bool "log general statistics (0x1)"
		config DMALLOC_MASK_LOG_NON_FREE
			depends on DMALLOC_DEBUG
			bool "log non-freed pointers (0x2)"
		config DMALLOC_MASK_LOG_KNOWN
			depends on DMALLOC_DEBUG
			bool "log only known non-freed (0x4)"
		config DMALLOC_MASK_LOG_TRANS
			depends on DMALLOC_DEBUG
			bool "log memory transactions (0x8)"
		config DMALLOC_MASK_LOG_ADMIN
			depends on DMALLOC_DEBUG
			bool "log administrative info (0x20)"
		config DMALLOC_MASK_LOG_BAD_SPACE
			depends on DMALLOC_DEBUG
			bool "dump space from bad pnt (0x100)"
		config DMALLOC_MASK_LOG_NONFREE_SPACE
			depends on DMALLOC_DEBUG
			bool "dump space from non-freed pointers (0x200)"
		config DMALLOC_MASK_LOG_ELAPSED_TIME
			depends on DMALLOC_DEBUG
			bool "log elapsed-time for allocated pointer (0x40000)"
		config DMALLOC_MASK_LOG_CURRENT_TIME
			depends on DMALLOC_DEBUG
			bool "log current-time for allocated pointer (0x80000)"
		config DMALLOC_MASK_CHECK_FENCE
			depends on DMALLOC_DEBUG
			bool "check fence-post errors (0x400)"
		config DMALLOC_MASK_CHECK_HEAP
			depends on DMALLOC_DEBUG
			bool "check heap adm structs (0x800)"
		config DMALLOC_MASK_CHECK_BLANK
			depends on DMALLOC_DEBUG
			bool "check mem overwritten by alloc-blank, free-blank (0x2000)"
		config DMALLOC_MASK_CHECK_FUNCS
			depends on DMALLOC_DEBUG
			bool "check functions (0x4000)"
		config DMALLOC_MASK_CHECK_SHUTDOWN
			depends on DMALLOC_DEBUG
			bool "check heap on shutdown (0x8000)"
		config DMALLOC_MASK_CATCH_SIGNALS
			depends on DMALLOC_DEBUG
			bool "shutdown program on SIGHUP, SIGINT, SIGTERM (0x20000)"
		config DMALLOC_MASK_REALLOC_COPY
			depends on DMALLOC_DEBUG
			bool "copy all re-allocations (0x100000)"
		config DMALLOC_MASK_FREE_BLANK
			depends on DMALLOC_DEBUG
			bool "overwrite freed memory with \0337 byte (0xdf) (0x200000)"
		config DMALLOC_MASK_ERROR_ABORT
			depends on DMALLOC_DEBUG
			bool "abort immediately on error (0x400000)"
		config DMALLOC_MASK_ALLOC_BLANK
			depends on DMALLOC_DEBUG
			bool "overwrite allocated memory with \0332 byte (0xda) (0x800000)"
		config DMALLOC_MASK_PRINT_MESSAGES
			depends on DMALLOC_DEBUG
			bool "write messages to stderr (0x2000000)"
		config DMALLOC_MASK_CATCH_NULL
			depends on DMALLOC_DEBUG
			bool "abort if no memory available (0x4000000)"
		config DMALLOC_MASK_NEVER_REUSE
			depends on DMALLOC_DEBUG
			bool "never re-use freed memory (0x8000000)"
		config DMALLOC_MASK_ERROR_DUMP
			depends on DMALLOC_DEBUG
			bool "dump core on error, then continue (0x40000000)"
		config DMALLOC_MASK_ERROR_FREE_NULL
			depends on DMALLOC_DEBUG
			bool "generate error when a 0L pointer is freed (0x10000000)"

		config DMALLOC_LOGFILE_DIR
			string "dmalloc logfile directory"
			default "/tmp"
			depends on DMALLOC_DEBUG
		config NFS_DEBUG
			bool "NFS for debug"
			default n
		config NO_SIGPIPE
			bool "Don't receive SIGPIPE"
			default y
			help
				The system keeps reporting SIGPIPE and it's annoying.
				Turn this on to disable all SIGPIP signal.
		config NETSERVICE_DEBUG
			bool "Netservice debug"
			default n
			help
				Turn on this option for netservice debug, this will print out
				netservice statemachine state, events and further debug messages
		
		config X86_PLAYER_SUPPORT_ON_REMOTE_PART
			bool "x86 player support on remote part"
			depends on !PLATFORM_X86
			default n
			help
				Play media on target board while using GUI on x86.
				This is to build on target board part.

		config X86_PLAYER_SUPPORT	
			bool "x86 player support"
			depends on PLATFORM_X86
			default n
			help
				Play media on target board while using GUI on x86.
		config X86_REMOTE_PLAYER_IP
			string
			depends on X86_PLAYER_SUPPORT
			default "X86_REMOTE_PLAYER_IP"

	endmenu
	menu "DMAX fixes"
		config SHOW_INFO_BAR_WHILE_SWITCHING_REPEAT_MODE
			bool "Show info. bar while switching repeat mode for video and photo"
			default y
			help
				When the info. bar is not on screen, if the user changes the repeat mode. 
				The info bar will be shown for a while and disappear. 
				This is requested by WD.
				
		config OSD_INFO_INDEPENDENCE
			bool "Showing info or not is independnent from each browsing page"
			default y
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_LMP555 || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_ALPHA || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			help
				For browsing video/audio/music, showing info or not is 
				independent from each mode.

		config NOW_PLAYING_INFO_SHOWN_ALL_THE_TIME
			bool "Show now playing info. for background music all the time"
			default y
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_LMP555 || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_ALPHA || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			help 
				[WDITR 11639]"Now Playing" screen doesn't show up
				So if there is background music playing, we have to show the now playing info. bar all the time

		config BUG_2134_FIXED
			bool "default input color space is BT.709"
			default y
			help
				[WDITR 14057] Unflagged video decoded with BT.601 instead of BT.709
				for sigma. default input color space is BT.601. but most unflagged video is BT.709. so we always set default is BT.709

		config BUG_1332_FIXED
			bool "Support 0x50 audio codec id for ts format"
			default y
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_LMP555 || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			help
				[WDITR 11820] Audio is not supported by playback TS file with mp2 audio format.
				That is due to the audio codec id is 0x50, and we are not add it to player.
				So, we detect it is unsupported audio.The 0x50 codec id is mpeg audio.

		config BUG_798_FIXED
			bool "Playing WMV9 files, FF/REV changes aspect ratio"
			default y
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_LMP555 || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			help
				[WDITR 9988]Playing WMV9 files, FF/REV changes aspect ratio. 
				This is due to we reinit the HW player without reset 
				the aspect ratio. And we reinit the HW player is 
				because the sigma Bug 8324 : Avi files(div3 and wmv9) 
				stutter after some trickmode functions .

		config BUG_1189_FIXED
			bool "support 24bits AIFF file"
			default y
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_LMP555 || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			help
				[WDITR 11310]AIF file sounds like static when played on WD FW.
				This is due to we get incorrect audio data position.

		config BUG_1767_FIXED
			bool "always send the pts of h264 codec"
			default y
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_LMP555 || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			help
				[WDITR 13258] MKV audio out of sync
				this is problem file. bug WD still want to fix it. the duration of video is not the same with audio
		config BUG_1943_FIXED
			bool "to fixed duration error for some problem file"
			default y
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_LMP555 || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			help
				[WDITR 13437] Playback: Issues surrounding files
				there are some problem files. the duration will parse error due to the incorrect pts value.
				in this case (pts bitrate is larger than 50Mb) , we will use timestamp duration.

		config BUG_2972_FIXED
			bool "to fix avi playback issue for non-inteleave file"
			default y
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_LMP555 || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			help
				[WDITR 15798] Playback: Video restarts halfway through playback
				there is a problem when we implement index playback

		config ENABLE_BACK_BUTTON_ON_VIDEO_RESUME_PAGE
			bool "Enable back button on video resume page"
			default y
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help
				open this option if you want to allow user press back button to cancel video playback
				on video resume/cancel page
				video resume/cancel page:
				"Do you want to resume playback or restart the video?"	

		config SMALL_FOLDER_ICON_FOR_FOLDER_THUMB
			bool "Add a small folder icon for a folder thumbnail"
			default y
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help 
				If there is a thumbnail for a folder, it's hard to tell if it is 
				a file or a folder. So we will place a small default folder icon
				to indicate it's a folder instead of a file
		config SUBTITLE_TURN_ON_OR_OFF_BY_DEFAULT
			bool "add setting to turn on or off subtitle by default"
			default y
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV || PRODUCT_EXT_LMP555
			help
				Add a setting in Video setting for turn on or off subtitle by default
		config SUBTITLE_OUTLINE_SHAPE
			bool "add setting to adjust the subtitle outline shape"
			default y
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV || PRODUCT_EXT_LMP555
			help
				Add a setting in Video setting for adjust the subtitle outline shape
		config PLAYLIST_SORT_BY_FILE
			bool "sort the content of playlist by itself"
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help
				Enable to sort by original playlist, disable to sort by file name.
			default y
		config AUDIO_TRACK_DISPLAY
			bool "Enable set audio browse display filename or title"
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_LMP555 || PRODUCT_EXT_ALPHA || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			depends on CAS 
			help
				Enable the setup optnion about setting the display of audio meta browse.
			default y
		config AUDIO_HIERARCHY_BROWSE
			bool "Enable audio hierarchy browse"
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_LMP555 || PRODUCT_EXT_ALPHA || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_EM7075 || PRODUCT_EXT_WDTV_RV
			help
				Hierarchy: Genre / Artist / Album.
			default y
		config AUTOPLAY
			bool "Enable / disable auto play support"
			depends on PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV || PRODUCT_EXT_LMP555
			help
				enable / disable auto play function, including setup option.
			default y
		config AUTO_PLAY_SELECT_DEVICE
			bool "Select the device to auto play"
			depends on AUTOPLAY && PRODUCT_EXT_LMP555 
			help
				allow users to select any device (e.g USB1 or USB2 or SATA) to auto play when system power on.
			default y
		config SORT_BY_TRACK_NUMBER_WITH_ALBUM
			bool "Enable / disable sort by track number with album browse"
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help
				Enable / disable sort by track number with album browse.
			default y
		config VIDEO_PLAYLIST
			bool "Enable video playlist"
			default y if PRODUCT_EXT_WDTV_HUT
			default n 
		config FF_FB_LOOP_WITHOUT_NORMAL
			bool "when pressing ff / fb continously, remove normal speed from the cycle"
			default y if PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help
				When ff / fb to the max speed, set the player speed to 2x instead of 1x.
			default n

		config SEND_MUTE_SOUND_AT_BEGINNING
			bool "bug 974, we send mute audio at beginning to workaround it."
			default y
			depends on (PLATFORM_SMP8654 || PLATFORM_SMP8670) && DMA_HDMI
			help
				because there is noise for some TV, 
				we send mute audio at beginning to workaround it.
				this is only on AV player.
		config HDMI_SIMPLAY_recover_from_HDMI_apply_fail
			bool "Simplay failed. HDMI no display after wake up from power off"
			default y
			depends on PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_ALPHA || PRODUCT_EXT_WDTV_RV
			help
				[WDITR 14644] Simplay failed.
				This is the walk around for simplay.
				There is a pending error during HDMI apply display option.
				[parse_display_cmdline.* c:5651] Can not set PadsControl: Property 6125 on module 18, RM_PENDING.
				The display will pending and cause the output fail.
				so we will reinit HDMI and apply display option again.*/
		config BUG_2127_FIX_NO_HDMI_OUTPUT_ON_RCA_TV
			bool "bug 2127, fix no hdmi output on RCA tv"
			default y
			depends on PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help
				This is a workaround for the RCA TV, 
				but it will result in an out-of-spec AVI InfoFrame.

				After this patch is applied inside MRUA_src, the AVI
				InfoFrame is by default:
				+-----------------------------------------------+
				| AVI Info Frame, Type 0x82 Version 0x02 Len 13 |
				+-----+-----+-----+-----+-----+-----+-----+-----+
				|  0  | Y=2 (444) | A=0 |Bh=0 |Bv=0 |Su=0 |So=0 |
				| C=0(None) | M=2(16:9) |     R=0x08(same)      |
				|ITC=0| EC=0 (xvYCC601) | Q=0 (Def) |SCv=0|SCh=0|
				|  0  |           VIC=04 720p 60Hz              |
				| YQ=0(Lim) |CN=0(Graph)|          PR=0         |
				| Top  hBar = 0         | Bottom hBar = 0       |
				| Left vBar = 0         | Right  vBar = 0       |
				+-----+-----+-----+-----+-----+-----+-----+-----+

				The HDMI certification test in the Astro VA-1809 analyzer
				does not complain about this.

				Without this patch RCA's avi infoFrame will have incorrectly
				value, Bottom hBar = 65535, Right  vBar = 65535.
		config NO_FF_FB_AT_PLAYER_PAUSE
			bool "A custoner request: ignore the ff/ fb key at pause state."
			default y
			depends on PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV || PRODUCT_EXT_LMP555
			help
				This one is to enable no ff / fb when player state is at the pause state.
		config VIDEO_PLAY_SEEK
			bool "A capability to allow user to seek time when video playing"
			default y
			depends on PRODUCT_EXT_LMP555
			help
			This one is to enable user can enter time to jump to the duration where want to seek.
		config BUG_2849_FIX_CRASH_WHEN_CHANGE_OUTPUT_FROM_HDMI_TO_COMPOSITE_NTSC
			bool "[WDITR 15478] Resolution: Villa shows black screen when switch composite PAL to NTSC"
			default y
			depends on PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help
				This issue will fix if we apply display optin twice. 
				But it's work around.
		config SORT_WITH_CASE_INSENSITIVE
			bool "Add COLLATE NOCASE sql command to disable the case sensitive on sorting."
			default y
			depends on PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help
				The command is on the mail loop of sqlite wiki. Enable this config to change the order function to case insensitive.
	endmenu
	source config/Kconfig.features_dlna.in
	source config/Kconfig.features_drm.in
	source config/Kconfig.features_rally.in
endmenu

menu	"Path settings"

	config	SETTING_ORIGINAL_CONFIG_FILE_DIR
		string "directory to store default config files"
		default "/conf_src"

	config	SETTING_FACTORY_SETTINGS
		string "factory settings"
		default "config_factory_default"

	config	SETTING_CONFIG_FILE_DIR
		string "directory of current config file"
		default "/tmp/conf/"

	config	SETTING_CONFIG_FILE_NAME
		string "filename of current settings"
		default "config"
		help 
			This is the config file used to store config in memory. 
			This file will be saved in flash by other utility.
			Mostly, you don't have to change this setting.

	config	RELATIVE_PATH_FOR_RESOURCES
		string "Relative path for resources, including settings, etc."
		default ""
		help
			This is most likely to be used while you are developing on a x86 platform. 
			If you don't set anything to it, it will be replaced to the path to your building system
			
endmenu

source	config/Kconfig.rootfs_installer.in
source	config/Kconfig.rootfs_primary_system_installer.in
source	config/Kconfig.firmware_maker.in
source	config/Kconfig.external_packages.in


