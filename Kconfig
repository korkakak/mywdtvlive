	endmenu
	menu "System features"
		config DIGITAL_WITHOUT_HDMI_AUDIO
                        bool "Support digital audio passthrough without HDMI audio"
                        default y if PRODUCT_EXT_WDTV_RV
                        help
				Digital audio passthrough, but disable HDMI audio output.
		config DIGITAL_HDMI_AUDIO_ONLY
                        bool "Support digital audio passthrough 7.1ch, HDMI audio only"
                        default y if PRODUCT_EXT_WDTV_RV
                        help
				Digital audio passthrough 7.1ch, but disable SPDIF audio output.
		config PARENTAL_CONTROL
                        bool "parental control"
                        default y if PRODUCT_EXT_WDTV_RV
			default n
			help 
				Enable this option to support parental control.
		config SUPPORT_LOCAL_SYNC
                        bool "Support auto sync function"
                        depends on STORAGE_SUPPORT
                        default y if PRODUCT_EXT_WDTV_RV
                        help
                                1. Enable this option, system detect external USB plug in and it will show prompt UI to ask user want to sync or not. If user want, system will do sync.
				2. if you enable this option, please check SUPPORT_RSYNC is enable or not. if SUPPORT_RSYNC is disable, please enable it.
		config SUPPORT_NETWORK_SYNC
			bool "Support auto network sync function"
			depends on STORAGE_SUPPORT && ENABLE_NETWORKING && SAMBA
			default n
			help
				1. Enable this option, user can set sync-timer, sync-server_name, sync-username and sync-password to let system do network_sync action at user's specified timer.
				2. if you enable this option, please check SUPPORT_RSYNC is enable or not. if SUPPORT_RSYNC is disable, please enable it.
		config  FULL_KEYBOARD
			bool "Use the full keyboard in keyboard page"
			depends on PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			default n
			help
				Use the full keyboard in keyboard page.
		config KEYBOARD_SUPPORT_EU
			bool "Keyboard support eu characters"
			default n
			help
				Support inputting European chararcters in keyboard
		config SUPPORT_MOBILE_KEY_INPUT
			bool "Support mobile key input"
			default y
			depends on PRODUCT_EXT_WDTV_RV
			help
				Enable this to support mobile key input.
		config SUPPORT_MOVABLE_KEYBOARD_CURSOR
			bool "Support movalbe keyboard cursor"
			default y
			depends on PRODUCT_EXT_WDTV_RV
			help
				Enable this to support movable cursor in keyboard input page.
		config SINGLE_RENDERER
			bool "Single render"
			default n
			help 
				Only one media renderer instance for AV/PIC.
		config INDEPENDENT_BROWSE_DISPLAY
			bool "Independent browse display"
			default y if PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_WDTV_VILLA || PRODUCT_EXT_WDTV_RV
			help
				Turn on this option if you want to have 
				independent browse display setting(list mode or thumbnail mode)
				for PHOTO/VIDEO/MUSIC/COMMON(network).
				Otherwise, turn it off if you want to make
				PHOTO, VIDIO, MUSIC, and COMMON(network) share same setting.

		choice
			depends on INDEPENDENT_BROWSE_DISPLAY
			prompt "Default browse display for photo"
			config PHOTO_BROWSE_DISPLAY_DEFAULT_IS_THUMBNAIL
				bool "thumbnail mode"
			config PHOTO_BROWSE_DISPLAY_DEFAULT_IS_LIST
				bool "list mode"
		endchoice
		choice
			depends on INDEPENDENT_BROWSE_DISPLAY
			prompt "Default browse display for video"
			config VIDEO_BROWSE_DISPLAY_DEFAULT_IS_THUMBNAIL
				bool "thumbnail mode"
			config VIDEO_BROWSE_DISPLAY_DEFAULT_IS_LIST
				bool "list mode"
			config VIDEO_BROWSE_DISPLAY_DEFAULT_IS_VIDEO
				depends on OSD_SUPPORT_PREVIEW_PAGE
				bool "preview mode"
		endchoice
		choice
			depends on INDEPENDENT_BROWSE_DISPLAY
			prompt "Default browse display for music"
			config MUSIC_BROWSE_DISPLAY_DEFAULT_IS_THUMBNAIL
				bool "thumbnail mode"
			config MUSIC_BROWSE_DISPLAY_DEFAULT_IS_LIST
				bool "list mode"
		endchoice

		choice
			depends on !INDEPENDENT_BROWSE_DISPLAY
			prompt "default browse display for music/video/photo"
			config BROWSE_DISPLAY_DEFAULT_IS_THUMBNAIL
				bool "thumbnail mode"
			config BROWSE_DISPLAY_DEFAULT_IS_LIST
				bool "list mode"
		endchoice				

		choice
		prompt "Home crossbar menu default"
		default HOME_CROSSBAR_DEFAULT_IS_VIDEO if PRODUCT_EXT_LMP555 || PRODUCT_EXT_WDTV_HOUSE || PRODUCT_EXT_WDTV_HUT || PRODUCT_EXT_AV_LS700L || PRODUCT_EXT_IMEDIA_HD100 || PRODUCT_EXT_FUNTWIST || PRODUCT_EXT_EM7075
		config HOME_CROSSBAR_DEFAULT_IS_PHOTO
			bool "photo"
		config HOME_CROSSBAR_DEFAULT_IS_VIDEO
			bool "video"
		config HOME_CROSSBAR_DEFAULT_IS_MUSIC
			bool "music"
		config HOME_CROSSBAR_DEFAULT_IS_SETTING
			bool "setting"
		config HOME_CROSSBAR_DEFAULT_IS_NETWORK
			bool "network"
		endchoice

		config DISABLE_CONTROL_OSD_FROM_STD_INPUT
			bool "Disable the dmaosd read data from std input"
			depends on (PLATFORM_SMP8654 || PLATFORM_SMP8634 || PLATFORM_SMP8670)
			default y if (PLATFORM_SMP8654 || PLATFORM_SMP8634 || PLATFORM_SMP8670)
			default n
			help 
				We run the dmaosd in the BG. and that will make input_key be set. 
				In this case, the dmaosd will take much CPU resource.  
				So we disable the input_key.
		config DMA_HDMI
			bool "HDMI output"
			default y
		config MULTI_LANGUAGE
			bool "Multilingo support"
			default y
		config HEBREW_AND_ARABIC_SUPPORT
			bool "Hebrew and Arabic language support"
			default n
		config  DISABLE_HOME_AND_RETURN_WHILE_VIDEO_PLAYING
                        bool "Disable home and return key while video playing"
                        default y if PRODUCT_EXT_LMP555
                        default n
                        help
                                Disable "home" & "Back" key while playing a video.
		config DMA_SUBTITLE
			bool "Subtitle support"
			default y
		config DMA_SUBTITLE_CLOSE_MUXED_BYDEF
			bool "Disable embedded subtitle by default"
			default y
			depends on DMA_SUBTITLE
		menu "Zoom Ratio"
			choice 
				prompt "select the zoom ratio"
				default ZOOM_IN_OUT_CASE1
				config ZOOM_IN_OUT_CASE1
					bool "zoom in 2,4,8X, zoom out 2,4,8X"
					help
						the zoom ratio is 2X,4X,8X for zoom in / out. 
						it define in the src/util/include/zoom_ratio_definition.h
				config ZOOM_IN_OUT_CASE2
					bool "zoom in 1.1,1.2,2,4,8X, zoom out 2,4,8X"
					help
						the zoom ratio is 1.1X,1.2X,2X,4X,8X for zoom in, 2X,4X,8X for zoom out
						it define in the src/util/include/zoom_ratio_definition.h
				config ZOOM_IN_OUT_CASE3
					bool "zoom in 1.1,1.2,2,4,8X, zoom out 0.9,0.8,2,4,8X"
					help
						the zoom ratio is 1.1X,1.2X,2X,4X,8X for zoom in, 0.9X,0.8X,2X,4X,8X for zoom out
						it define in the src/util/include/zoom_ratio_definition.h
			endchoice
		endmenu
		config LIMIT_VOB_ZOOM_SIZE
			bool "limit the size of ZOOM, work around for MRUA_3.7.x zoom bug. "
			default n
			default y if PLATFORM_SMP8654_SDK_3_7_0
			help
				MRUA_3.7.x show incorrect in certain zoom ratio.
				So we have to avoid this. 
		config DISABLE_SUBTITLE_IN_ZOOM
			bool "Disable subtitle while ZOOM (PAN for player)"
			default y
			depends on DMA_SUBTITLE
			help 
				when we enable this , 
				we will disable subtitle when we do zoom and pan for player.
				but we only show wrong key when we do zoom function on OSD.
		config PLAYER_CHAPTER_SUPPORT
			bool "player chapter support"
			default y
			help
				to support mkv or mp4 chapter
		config MKV_CHAPTER_SUPPORT
			bool "MKV chapter support"
			depends on PLAYER_CHAPTER_SUPPORT
			default y
		config MOV_CHAPTER_SUPPORT
			bool "MOV chapter support"
			depends on PLAYER_CHAPTER_SUPPORT && QUICKTIME_PLAYER
			default n
		config HDMI_OUTPUT_APPLY_TWICE
			bool "Apply HDMI settings twice"
			default n
		config HDMI_FIX_EDID_READ_ERR
			bool "Fix HDMI chip can't read TV's EDID"
			default y
			depends on PLATFORM_SMP8654_SDK_3_5_0 || PLATFORM_SMP8654_SDK_3_6_0_rc11 || PLATFORM_SMP8654_SDK_3_6_0 || PLATFORM_SMP8654_SDK_3_6_1_rc2 || PLATFORM_SMP8654_SDK_3_7_0 
			help
				sometime HDMI chip can't read EDID table from TV, This patch will reset PLL and 
				turn on TMDS when read EDID fail. Then the EDID table can be read in next time.
		config HDMI_SIMPLAY_3_7_0_SLi_AVI_double_send_PATCH
			bool "3.7.0 Simplay SLi_AVI_double_send patch "
			default n if PLATFORM_SMP8654_SDK_3_7_1_RC3_BASE_ON_3_7_0
			default y
			depends on PLATFORM_SMP8654_SDK_3_7_0 && HDMI_FIX_EDID_READ_ERR
			help
				this patch is for Simplay.
				to potentially fix this "purple screen" and 
				increase the robustness to the HDMI 

		config HDMI_SIMPLAY_3_7_0_SLi_EDID_rotation_minimal_PATCH
			bool "3.7.0 Simplay SLi_EDID_rotation_minimal patch"
			default n if PLATFORM_SMP8654_SDK_3_7_1_RC3_BASE_ON_3_7_0
			default y
			depends on PLATFORM_SMP8654_SDK_3_7_0 && HDMI_FIX_EDID_READ_ERR
			help
				this patch is for Simplay.

		config HDMI_ALWAYS_OUTPUT_RGB
