	   	<text text="@@browselist-notification-text_3" y="571" speed="@@browselist-notification-text-scrolling_3" delay="2"/>
      	</wrapper>

	<!-- notification timer -->
      	<wrapper x="209" w="990" h="22" fontsize="20" textcolor="0x757575">
   		<text text="@@browselist-notification-time-text_0" y="256"/>
	   	<text text="@@browselist-notification-time-text_1" y="373"/>
   		<text text="@@browselist-notification-time-text_2" y="490"/>
	   	<text text="@@browselist-notification-time-text_3" y="607"/>
