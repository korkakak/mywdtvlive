<?xml version="1.0"?>
<page background="image/blockbuster/bb_common_bg.jpg" ignore_desktop_settings="1">
	<ctrlgrp>
		<button valkey="Movies" 
			normal_bg="image/blockbuster/bb_main_browse_n.png"
			focused_bg="image/blockbuster/bb_main_browse_f.png"
			disabled_bg="image/blockbuster/bb_main_browse_c.png"/>
		<button valkey="SearchAll" 
			normal_bg="image/blockbuster/bb_main_search_n.png"
			focused_bg="image/blockbuster/bb_main_search_f.png" 
			disabled_bg="image/blockbuster/bb_main_search_c.png"/>
		<button valkey="DownloadManager"/>
		<linebreak/>
		<button valkey="MyVideos" 
			normal_bg="image/blockbuster/bb_bt_n.png" 
			focused_bg="image/blockbuster/bb_bt_f.png"
			click_bg="image/blockbuster/bb_bt_c.png"
			click_effect="tp"/>
		<button valkey="WishLists" 
			normal_bg="image/blockbuster/bb_bt_n.png" 
			focused_bg="image/blockbuster/bb_bt_f.png" 
			click_bg="image/blockbuster/bb_bt_c.png" 
			click_effect="tp"/>
		<button valkey="Settings" 
			normal_bg="image/blockbuster/bb_bt_n.png" 
			focused_bg="image/blockbuster/bb_bt_f.png" 
			click_bg="image/blockbuster/bb_bt_c.png" 
			click_effect="tp"/>
		<button valkey="Help" 
			normal_bg="image/blockbuster/bb_bt_n.png" 
			focused_bg="image/blockbuster/bb_bt_f.png" 
			click_bg="image/blockbuster/bb_bt_c.png" 
			click_effect="tp"/>
	</ctrlgrp>

	<image image="image/blockbuster/bb_logo.png" x="384" y="66" w="538" h="82"/>

	<table x="305" y="221" w="670" h="199" rows="1" cols="3" colspacing="20" >
		<image image="@@bg-Movies" active="@@act-Movies"/>
		<image image="@@bg-SearchAll" active="@@act-SearchAll"/>
		<image image="@@dlman_icon"/>

	</table>	
	<table x="207" y="533" w="855" h="49" fontsize="20" rows="1" cols="4" colspacing="4" align="hcenter" textcolor="0xff727272" actoverlistcolor="0xff727272" activetextcolor="0xfff2f2f2" clicktextcolor="0xff4d4d4d" clickedtextcolor="0xfffcb040">
		<imgbtn image="@@bg-MyVideos" text="My Library" active="@@act-MyVideos" selected="@@sel-MyVideos" click="@@click-MyVideos"/>
		<imgbtn image="@@bg-WishLists" text="My Favorites" active="@@act-WishLists" selected="@@sel-WishLists" click="@@click-WishLists"/>
		<imgbtn image="@@bg-Settings" text="@@settings_text" active="@@act-Settings" selected="@@sel-Settings" click="@@click-Settings"/>
		<imgbtn image="@@bg-Help" text="Help" active="@@act-Help" selected="@@sel-Help" click="@@click-Help"/>
	</table>
	<image image="image/blockbuster/bb_connect_storage_icon.png" x="100" y="638" w="33" h="36" disable="@@disable-storage"/>
	<text text="Please connect a USB hard drive or flashdrive to use the Download Manager." x="142" y="649" w="700" h="22" fontsize="20" textcolor="0xffffffff" disable="@@disable-storage"/>
	<image image="@@status_icon" x="585" y="303" w="113" h="113"/>
	<image image="image/blockbuster/bb_cn_logo.png" x="974" y="632" w="241" h="36"/>
	<image image="@@notify_download_image" x="84" y="55" w="79" h="79"/>
	<image image="@@notify_watchable_image" x="163" y="55" w="79" h="79"/>
</page>
