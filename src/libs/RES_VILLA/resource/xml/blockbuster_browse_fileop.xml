		<text text="@@browselist_3_text" active="@@act-browselist-3" selected="@@sel-browselist-3" click="@@click-browselist-3" disable="@@disable-browselist" lmargin="20" umargin="16"/>
		<text text="@@browselist_4_text" active="@@act-browselist-4" selected="@@sel-browselist-4" click="@@click-browselist-4" disable="@@disable-browselist" lmargin="20" umargin="16"/>
		<text text="@@browselist_5_text" active="@@act-browselist-5" selected="@@sel-browselist-5" click="@@click-browselist-5" disable="@@disable-browselist" lmargin="20" umargin="16"/>
	</table>
	<text text="Press [OPTION] to select source" x="316" y="573" w="648" h="22" textcolor="0xff727272" fontsize="20"/>
	<image image="@@status_icon" x="585" y="303" w="113" h="113"/>
	<include filename="./blockbuster_common.xml"/>
</page>
