		<imgbtn image="@@bg-browselist-5" active="@@act-browselist-5" selected="@@sel-browselist-5" click="@@click-browselist-5" clicked="@@clicked-browselist-5" disable="@@disable-browselist"/>
	</table>

	<table x="316" y="224" w="600" h="306" cols="1" rows="6" fontsize="20" align="left,top" textcolor="0xff727272" actoverlistcolor="0xff727272" activetextcolor="0xfff2f2f2" clicktextcolor="0xff4d4d4d" clickedtextcolor="0xfff54029">
		<text text="@@browselist_0_text" active="@@act-browselist-0" selected="@@sel-browselist-0" click="@@click-browselist-0" disable="@@disable-browselist" lmargin="20" umargin="16"/>
