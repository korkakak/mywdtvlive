#!/bin/sh
test -x /usr/sbin/nmbd -a -x /usr/sbin/smbd || exit 0

case "$1" in
	start)
		rm -rf /tmp/private
		mkdir -p /tmp/private
		cp -f /etc/secrets.tdb /tmp/private
		nmbd -D --configfile=/tmp/smb.conf  
		exec smbd -D --configfile=/tmp/smb.conf --piddir=/tmp --private-dir=/tmp/private --smb-passwd-file=/tmp/private/smbpasswd
		;;
	stop)
		kill -9 `pidof nmbd`
		kill -9 `pidof smbd`
		;;
	reload)
		kill -HUP `pidof smbd`
		kill -HUP `pidof nmbd`
		;;
	restart|force-reload)
		$0 stop
		sleep 1
		$0 start
		;;
	status)
		echo "not support status command !"
		exit 1
		;;
	*)
		echo "Usage: $0 {start|stop|reload|restart|force-reload|status}"
		exit 1
		;;
esac

exit 0
