+	ehci->reclaim_ready = 0;
+	cmd |= CMD_IAAD;
+	ehci_writel(ehci, cmd, &ehci->regs->command);
+	(void)ehci_readl(ehci, &ehci->regs->command);
+	timer_action (ehci, TIMER_IAA_WATCHDOG);
