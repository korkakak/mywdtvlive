+static void hsata_bmdma_start( struct ata_queued_cmd *qc )
+{
+#ifdef HSATA_TANGOX_DMA
+	struct hsata_device *hsdev = HSDEV_FROM_QC(qc);
+	int dir = qc->dma_dir;
+	int controller = tangox_controller(hsdev);
