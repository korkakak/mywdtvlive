+	status = request_irq( tangox_sata_dma_irq[port],
+				((port == 0) ? hsata_dma_isr_0 : hsata_dma_isr_1),
+				IRQF_DISABLED,
+                ((port == 0) ? "HSATA0-DMA": "HSATA1-DMA"),    
+                ap->host ); 
