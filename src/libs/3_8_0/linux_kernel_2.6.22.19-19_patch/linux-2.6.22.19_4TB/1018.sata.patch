+static int hsata_port_start( struct ata_port *ap , int port)
+{
+	int status = 0;
+	struct hsata_device *hsdev ;
+	volatile u32    val32;
+	hsdev = HSDEV_FROM_AP(ap);
+
+	DPRINTK(  "id=%d port_num=%d port=0x%x\n", ap->print_id, ap->port_no, port);
